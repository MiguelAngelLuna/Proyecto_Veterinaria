@model IEnumerable<VeterinariaWebApp.Models.Usuario.Veterinario.MascotaAtendida>

@{
    ViewData["Title"] = "Mascotas Atendidas";
    Layout = "~/Views/Shared/_LayoutVeterinario.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-notes-medical text-success me-2"></i> Mascotas Atendidas
        </h1>
    </div>

    @if (!Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="fas fa-clipboard-list fa-5x text-muted mb-4" style="opacity: 0.3;"></i>
                <h4 class="text-muted">No tienes mascotas atendidas aún</h4>
                <p class="text-muted">Las mascotas aparecerán aquí después de finalizar la atención de sus citas.</p>
            </div>
        </div>
    }
    else
    {
        <!-- Resumen -->
        <div class="row mb-4">
            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Total Atenciones</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count()</div>
                            </div>
                            <div class="col-auto"><i class="fas fa-check-circle fa-2x text-gray-300"></i></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Mascotas Únicas</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Select(m => m.ide_mas).Distinct().Count()</div>
                            </div>
                            <div class="col-auto"><i class="fas fa-paw fa-2x text-gray-300"></i></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Ingresos Totales</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">S/ @Model.Sum(m => m.mon_pag).ToString("N2")</div>
                            </div>
                            <div class="col-auto"><i class="fas fa-money-bill-wave fa-2x text-gray-300"></i></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabla de atenciones -->
        <div class="card shadow mb-4">
            <div class="card-header py-3 bg-success text-white">
                <h6 class="m-0 font-weight-bold"><i class="fas fa-list me-2"></i>Historial de Atenciones</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                        <thead class="table-success">
                            <tr>
                                <th>Fecha</th>
                                <th>Mascota</th>
                                <th>Dueño</th>
                                <th>Diagnóstico</th>
                                <th>Monto</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var atencion in Model.OrderByDescending(m => m.fecha_atencion ?? m.cal_cit))
                            {
                                <tr>
                                    <td>
                                        <strong>@atencion.cal_cit.ToString("dd/MM/yyyy")</strong><br>
                                        <small class="text-muted">@atencion.cal_cit.ToString("hh:mm tt")</small>
                                    </td>
                                    <td>
                                        <span class="me-1">@atencion.EspecieEmoji</span>
                                        <strong>@atencion.mascota</strong><br>
                                        <small class="text-muted">@atencion.especie - @atencion.raza</small>
                                    </td>
                                    <td>
                                        @atencion.nombre_dueno<br>
                                        <small class="text-muted">Doc: @atencion.doc_dueno</small>
                                    </td>
                                    <td>
                                        @if (atencion.TieneHistorial)
                                        {
                                            <span class="text-truncate d-inline-block" style="max-width: 200px;" title="@atencion.diagnostico">
                                                @atencion.diagnostico
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">Sin registro</span>
                                        }
                                    </td>
                                    <td><span class="badge bg-success">S/ @atencion.mon_pag.ToString("N2")</span></td>
                                    <td>
                                        <a href="@Url.Action("GenerarPDFMascotaAtendida", "Veterinario", new { idCita = atencion.ide_cit })" 
                                           class="btn btn-danger btn-sm" title="Exportar PDF">
                                            <i class="fas fa-file-pdf"></i> PDF
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .border-left-success { border-left: 4px solid #28a745 !important; }
    .border-left-info { border-left: 4px solid #17a2b8 !important; }
    .border-left-primary { border-left: 4px solid #4e73df !important; }
    .bg-success-light { background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%); }
</style>
