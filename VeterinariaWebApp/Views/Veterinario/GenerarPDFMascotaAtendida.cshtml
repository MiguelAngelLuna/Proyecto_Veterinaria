        .detail-label { font-weight: 600; width: 130px; color: #555; flex-shrink: 0; }
        .detail-value { flex: 1; }

        .medical-field { margin-bottom: 15px; }
        .medical-label { font-weight: 600; color: #155724; margin-bottom: 5px; display: block; }
        .medical-value { background: #f8f9fa; padding: 10px; border-radius: 5px; border: 1px solid #e9ecef; }

        .amount { font-size: 18px; font-weight: bold; color: #28a745; }

        .footer {
            text-align: center;
            margin-top: 30px;
            font-size: 12px;
            color: #777;
            padding-top: 15px;
            border-top: 1px solid #eee;
        }

        .fecha-atencion {
