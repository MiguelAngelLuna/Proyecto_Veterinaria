@model VeterinariaWebApp.Models.Pago.Pago

@{
    ViewData["Title"] = "Detalle de Pago";
    var recepcionistaId = Context.Session.GetInt32("RecepcionistaId");
    var clienteId = Context.Session.GetInt32("PacienteId");

    if (clienteId != null && clienteId != 0)
    {
        Layout = "~/Views/Shared/_LayoutCliente.cshtml";
    }
    else if (recepcionistaId != null && recepcionistaId != 0)
    {
        Layout = "~/Views/Shared/_LayoutRecepcionista.cshtml";
    }
}

<div class="container mt-4">
    <div class="card shadow-sm border-primary">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title mb-0">
                <i class="fas fa-file-invoice-dollar"></i> Detalle de Pago
            </h2>
        </div>

        <div class="card-body">
            <h4 class="mb-4">
                <i class="fas fa-info-circle"></i> Información del Pago
            </h4>

            <div class="row mb-3 align-items-center">
                <div class="col-md-3 fw-bold d-flex align-items-center">
                    <i class="fas fa-hashtag"></i>
                    @Html.DisplayNameFor(model => model.IdPago)
                </div>
                <div class="col-md-9">
                    <span class="badge bg-primary text-white px-3 py-2">@Html.DisplayFor(model => model.IdPago)</span>
                </div>
            </div>

            <div class="row mb-3 align-items-center">
                <div class="col-md-3 fw-bold d-flex align-items-center">
                    <i class="fas fa-calendar-day"></i>
                    @Html.DisplayNameFor(model => model.HoraPago)
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.HoraPago)
                </div>
            </div>

            <div class="row mb-3 align-items-center">
                <div class="col-md-3 fw-bold d-flex align-items-center">
                    <i class="fas fa-hand-holding-usd"></i>
                    @Html.DisplayNameFor(model => model.MontoPago)
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.MontoPago)
                </div>
            </div>

            <div class="row mb-3 align-items-center">
                <div class="col-md-3 fw-bold d-flex align-items-center">
                    <i class="fas fa-credit-card"></i>
                    @Html.DisplayNameFor(model => model.TipoPago)
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.TipoPago)
                </div>
            </div>

            <div class="row mb-3 align-items-center">
                <div class="col-md-3 fw-bold d-flex align-items-center">
                    <i class="fas fa-user"></i>
                    @Html.DisplayNameFor(model => model.NombreCliente)
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.NombreCliente)
                </div>
            </div>

            <div class="row mb-3 align-items-center">
                <div class="col-md-3 fw-bold d-flex align-items-center">
                    <i class="fas fa-envelope"></i>
                    @Html.DisplayNameFor(model => model.CorreoCliente)
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.CorreoCliente)
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-start mt-4">
        <div class="btn-group">
            @{
                if (clienteId != null && clienteId != 0)
                {
                    <a asp-controller="Pago" asp-action="PagosCliente" asp-route-ide_usr="@clienteId"
                       class="btn btn-outline-primary px-4">
                        <i class="fas fa-arrow-left"></i> Regresar
                    </a>
                }
                else if (recepcionistaId != null && recepcionistaId != 0)
                {
                    <a asp-controller="Pago" asp-action="PagosRecepcionista" asp-route-ide_usr="@recepcionistaId"
                       class="btn btn-outline-primary px-4">
                        <i class="fas fa-arrow-left"></i> Regresar
                    </a>
                }
            }

            <a asp-action="DetallePagoPDF" asp-route-id="@Model.IdPago" class="btn btn-danger px-4">
                <i class="fas fa-file-pdf"></i> Exportar PDF
            </a>
        </div>
    </div>
</div>

