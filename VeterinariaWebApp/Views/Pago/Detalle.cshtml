@model VeterinariaWebApp.Models.Pago.Pago

@{
    ViewData["Title"] = "Detalle de Pago";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-file-invoice-dollar text-success"></i> Detalle de Pago
    </h1>
    <a href="@Url.Action("Comprobante", "Pago", new { id = Model.IdPago })" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm" target="_blank">
        <i class="fas fa-print fa-sm text-white-50"></i> Imprimir Comprobante
    </a>
</div>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> @ViewBag.Error
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <div class="card shadow mb-4">
            <div class="card-header py-3 bg-success text-white">
                <h6 class="m-0 font-weight-bold">
                    <i class="fas fa-receipt"></i> Información del Pago
                </h6>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="card border-left-primary h-100">
                            <div class="card-body">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    ID de Pago
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">#@Model.IdPago</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card border-left-info h-100">
                            <div class="card-body">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                    Fecha del Pago
                                </div>
                                <div class="h6 mb-0 font-weight-bold text-gray-800">@Model.HoraPago.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="card border-left-warning h-100">
                            <div class="card-body">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                    Método de Pago
                                </div>
                                <div class="h6 mb-0 font-weight-bold text-gray-800">@Model.TipoPago</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card border-left-success h-100">
                            <div class="card-body">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Cliente
                                </div>
                                <div class="h6 mb-0 font-weight-bold text-gray-800">@Model.NombreCliente</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-12">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h5 class="text-muted mb-2">Monto Pagado</h5>
                                <h1 class="text-success mb-0">
                                    <i class="fas fa-money-bill-wave"></i> S/ @Model.MontoPago.ToString("N2")
                                </h1>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i>
                    <strong>Pago Confirmado</strong> - Este pago ha sido procesado correctamente.
                </div>

                <hr>

                <div class="text-center">
                    <a href="@Url.Action("Comprobante", "Pago", new { id = Model.IdPago })" class="btn btn-success" target="_blank">
                        <i class="fas fa-print"></i> Ver Comprobante
                    </a>
                    <a href="@Url.Action("MisCitas", "Cliente")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver a Mis Citas
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }

    .border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }

    .border-left-info {
        border-left: 0.25rem solid #36b9cc !important;
    }

    .border-left-warning {
        border-left: 0.25rem solid #f6c23e !important;
    }
</style>