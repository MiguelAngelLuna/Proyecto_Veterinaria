@model VeterinariaWebApp.Models.Mascota.Mascota

@{
    ViewData["Title"] = "Registrar Mascota";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<!-- Flatpickr CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/themes/material_green.css">

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-plus-circle text-success me-2"></i> Registrar Nueva Mascota
        </h1>
        <a asp-action="listaMascotasPorCliente" asp-route-ide_usr="@Context.Session.GetInt32("ClienteId")" 
           class="btn btn-secondary btn-sm">
            <i class="fas fa-arrow-left me-1"></i> Volver al listado
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow-lg border-0">
                <div class="card-header py-3 bg-gradient-success text-white">
                    <div class="d-flex align-items-center">
                        <div class="icon-circle bg-white text-success me-3">
                            <i class="fas fa-paw fa-lg"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 fw-bold">Nueva Mascota</h5>
                            <small class="opacity-75">Complete los datos de su mascota</small>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <form asp-action="AgregarMascota" method="post" id="formMascota">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Nombre -->
                        <div class="mb-4">
                            <label asp-for="Nombre" class="form-label fw-bold">
                                <i class="fas fa-tag me-1 text-success"></i> Nombre de la Mascota
                            </label>
                            <input asp-for="Nombre" class="form-control form-control-lg" 
                                   placeholder="Ej: Max, Luna, Rocky..." maxlength="50" />
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>

                        <!-- Especie y Raza -->
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="Especie" class="form-label fw-bold">
                                    <i class="fas fa-paw me-1 text-success"></i> Especie
                                </label>
                                <select asp-for="Especie" class="form-select form-select-lg" id="selectEspecie">
                                    <option value="">Seleccione una especie</option>
                                    <option value="Perro">üêï Perro</option>
                                    <option value="Gato">üê± Gato</option>
                                    <option value="Ave">üê¶ Ave</option>
                                    <option value="Conejo">üê∞ Conejo</option>
                                    <option value="Hamster">üêπ H√°mster</option>
                                    <option value="Pez">üê† Pez</option>
                                    <option value="Tortuga">üê¢ Tortuga</option>
                                    <option value="Otro">üìã Otro</option>
                                </select>
                                <span asp-validation-for="Especie" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-4">
                                <label asp-for="Raza" class="form-label fw-bold">
                                    <i class="fas fa-dna me-1 text-success"></i> Raza
                                </label>
                                <input asp-for="Raza" class="form-control form-control-lg" 
                                       placeholder="Ej: Labrador, Siam√©s..." maxlength="50" />
                                <span asp-validation-for="Raza" class="text-danger small"></span>
                                <small class="text-muted">Opcional - Deje vac√≠o si no conoce la raza</small>
                            </div>
                        </div>

                        <!-- Fecha de Nacimiento -->
                        <div class="mb-4">
                            <label asp-for="FechaNacimiento" class="form-label fw-bold">
                                <i class="fas fa-birthday-cake me-1 text-success"></i> Fecha de Nacimiento
                            </label>
                            <input asp-for="FechaNacimiento" type="text" class="form-control form-control-lg datepicker" 
                                   id="fechaNacimiento" placeholder="Seleccione la fecha" readonly />
                            <span asp-validation-for="FechaNacimiento" class="text-danger small"></span>
                            <small class="text-muted">Si no conoce la fecha exacta, ingrese una aproximada</small>
                        </div>

                        <!-- Informaci√≥n adicional -->
                        <div class="alert alert-light border-success mb-4">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-info-circle text-success me-2 fa-lg"></i>
                                <div>
                                    <strong>Informaci√≥n:</strong> Una vez registrada su mascota, 
                                    podr√° agendar citas m√©dicas y llevar un historial de atenciones.
                                </div>
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="listaMascotasPorCliente" asp-route-ide_usr="@Context.Session.GetInt32("ClienteId")" 
                               class="btn btn-outline-secondary btn-lg px-4">
                                <i class="fas fa-times me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-5" id="btnRegistrar">
                                <i class="fas fa-save me-1"></i> Registrar Mascota
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- Flatpickr JS -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/es.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Inicializar Flatpickr
            flatpickr("#fechaNacimiento", {
                locale: "es",
                dateFormat: "Y-m-d",
                altInput: true,
                altFormat: "d \\de F \\de Y",
                minDate: "1990-01-01",
                maxDate: "today",
                disableMobile: false,
                monthSelectorType: "dropdown",
                animate: true
            });

            // Validaci√≥n del formulario antes de enviar
            document.getElementById('formMascota').addEventListener('submit', function(e) {
                const nombre = document.querySelector('input[name="Nombre"]').value.trim();
                const especie = document.getElementById('selectEspecie').value;
                const fecha = document.getElementById('fechaNacimiento').value;

                if (!nombre || !especie || !fecha) {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'warning',
                        title: 'Campos incompletos',
                        text: 'Por favor complete todos los campos requeridos.',
                        confirmButtonColor: '#28a745'
                    });
                    return false;
                }

                // Mostrar loading
                document.getElementById('btnRegistrar').innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i> Registrando...';
                document.getElementById('btnRegistrar').disabled = true;
            });
        });
    </script>
}

<style>
    .bg-gradient-success {
        background: linear-gradient(135deg, #1e7e34 0%, #28a745 50%, #20c997 100%) !important;
    }

    .icon-circle {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card {
        border-radius: 15px;
        overflow: hidden;
    }

    .form-control, .form-select {
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

    .form-control:focus, .form-select:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
    }

    .form-control-lg, .form-select-lg {
        padding: 0.75rem 1rem;
        font-size: 1rem;
    }

    .btn-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        border: none;
        transition: all 0.3s ease;
    }

    .btn-success:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(40, 167, 69, 0.4);
    }

    .alert-light {
        background-color: #f8fff9;
    }

    /* Flatpickr custom */
    .flatpickr-calendar {
        border-radius: 10px !important;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15) !important;
    }

    .flatpickr-day.selected {
        background: #28a745 !important;
        border-color: #28a745 !important;
    }
</style>
