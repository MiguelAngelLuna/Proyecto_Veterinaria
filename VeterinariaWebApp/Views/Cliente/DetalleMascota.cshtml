@model VeterinariaWebApp.Models.Mascota.Mascota

@{
    ViewData["Title"] = "Detalle de Mascota";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
    var clienteId = Context.Session.GetInt32("ClienteId");
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-paw text-info me-2"></i> Detalle de Mascota
        </h1>
        <a asp-action="listaMascotasPorCliente" asp-route-ide_usr="@clienteId" class="btn btn-secondary btn-sm">
            <i class="fas fa-arrow-left me-1"></i> Volver al listado
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 overflow-hidden">
                <!-- Header con imagen/icono -->
                <div class="card-header bg-gradient-info text-white py-4">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <div class="mascota-avatar">
                                @switch (Model.Especie?.ToLower())
                                {
                                    case "perro":
                                        <span class="emoji-large">üêï</span>
                                        break;
                                    case "gato":
                                        <span class="emoji-large">üê±</span>
                                        break;
                                    case "ave":
                                        <span class="emoji-large">üê¶</span>
                                        break;
                                    case "conejo":
                                        <span class="emoji-large">üê∞</span>
                                        break;
                                    case "hamster":
                                        <span class="emoji-large">üêπ</span>
                                        break;
                                    case "pez":
                                        <span class="emoji-large">üê†</span>
                                        break;
                                    case "tortuga":
                                        <span class="emoji-large">üê¢</span>
                                        break;
                                    default:
                                        <span class="emoji-large">üêæ</span>
                                        break;
                                }
                            </div>
                        </div>
                        <div class="col">
                            <h2 class="mb-1 fw-bold">@Model.Nombre</h2>
                            <p class="mb-0 opacity-75">
                                <i class="fas fa-hashtag me-1"></i>ID: @Model.IdMascota
                            </p>
                        </div>
                        <div class="col-auto">
                            <span class="badge bg-white text-info fs-6 px-3 py-2">
                                <i class="fas fa-heart me-1"></i>@Model.Edad
                            </span>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <!-- Informaci√≥n Principal -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-card mb-4">
                                <div class="info-card-header">
                                    <i class="fas fa-paw text-info"></i>
                                    <span>Especie</span>
                                </div>
                                <div class="info-card-body">
                                    @Model.Especie
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-card mb-4">
                                <div class="info-card-header">
                                    <i class="fas fa-dna text-info"></i>
                                    <span>Raza</span>
                                </div>
                                <div class="info-card-body">
                                    @(string.IsNullOrEmpty(Model.Raza) ? "No especificada" : Model.Raza)
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-card mb-4">
                                <div class="info-card-header">
                                    <i class="fas fa-birthday-cake text-info"></i>
                                    <span>Fecha de Nacimiento</span>
                                </div>
                                <div class="info-card-body">
                                    @Model.FechaNacimiento.ToString("dd 'de' MMMM 'de' yyyy")
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-card mb-4">
                                <div class="info-card-header">
                                    <i class="fas fa-clock text-info"></i>
                                    <span>Edad Actual</span>
                                </div>
                                <div class="info-card-body">
                                    @Model.Edad
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Informaci√≥n adicional -->
                    <div class="alert alert-light border-info mt-3">
                        <div class="d-flex align-items-start">
                            <i class="fas fa-info-circle text-info me-3 mt-1 fa-lg"></i>
                            <div>
                                <h6 class="fw-bold mb-1">Informaci√≥n de registro</h6>
                                <p class="mb-0 text-muted small">
                                    Esta mascota est√° registrada en el sistema MiVet Online. 
                                    Puede agendar citas m√©dicas y llevar un historial de atenciones veterinarias.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Footer con acciones -->
                <div class="card-footer bg-light py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="listaMascotasPorCliente" asp-route-ide_usr="@clienteId" 
                           class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Volver
                        </a>
                        <div>
                            <a asp-action="ActualizarMascota" asp-route-id="@Model.IdMascota" 
                               class="btn btn-warning text-white me-2">
                                <i class="fas fa-edit me-1"></i> Editar
                            </a>
                            <button type="button" class="btn btn-danger" id="btnEliminar" 
                                    data-id="@Model.IdMascota" data-nombre="@Model.Nombre">
                                <i class="fas fa-trash me-1"></i> Eliminar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById('btnEliminar').addEventListener('click', function () {
                const idMascota = this.getAttribute('data-id');
                const nombreMascota = this.getAttribute('data-nombre');

                Swal.fire({
                    title: '¬øEliminar mascota?',
                    html: `¬øEst√°s seguro de que deseas eliminar a <strong>${nombreMascota}</strong>?<br><small class="text-muted">Esta acci√≥n no se puede deshacer.</small>`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#dc3545',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: '<i class="fas fa-trash me-1"></i> S√≠, eliminar',
                    cancelButtonText: '<i class="fas fa-times me-1"></i> Cancelar',
                    reverseButtons: true
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch(`/Cliente/EliminarMascota?id=${idMascota}`, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'X-Requested-With': 'XMLHttpRequest'
                            }
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: '¬°Eliminado!',
                                    text: data.message,
                                    confirmButtonColor: '#28a745'
                                }).then(() => {
                                    window.location.href = '@Url.Action("listaMascotasPorCliente", "Cliente", new { ide_usr = clienteId })';
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'No se puede eliminar',
                                    text: data.message,
                                    confirmButtonColor: '#28a745'
                                });
                            }
                        })
                        .catch(error => {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: 'Hubo un problema al eliminar la mascota.',
                                confirmButtonColor: '#28a745'
                            });
                        });
                    }
                });
            });
        });
    </script>
}

<style>
    .bg-gradient-info {
        background: linear-gradient(135deg, #17a2b8 0%, #20c997 50%, #38d9a9 100%) !important;
    }

    .mascota-avatar {
        width: 100px;
        height: 100px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 3px solid rgba(255, 255, 255, 0.5);
    }

    .emoji-large {
        font-size: 4rem;
    }

    .card {
        border-radius: 15px;
    }

    .info-card {
        background: #f8f9fa;
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid #e9ecef;
        transition: all 0.3s ease;
    }

    .info-card:hover {
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transform: translateY(-2px);
    }

    .info-card-header {
        background: linear-gradient(135deg, #e3f2fd 0%, #f5f5f5 100%);
        padding: 12px 16px;
        font-size: 0.85rem;
        color: #6c757d;
        display: flex;
        align-items: center;
        gap: 8px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .info-card-body {
        padding: 16px;
        font-size: 1.1rem;
        font-weight: 600;
        color: #2c3e50;
    }

    .btn-warning {
        background: linear-gradient(135deg, #f39c12 0%, #f1c40f 100%);
        border: none;
    }

    .btn-danger {
        background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
        border: none;
    }
</style>
