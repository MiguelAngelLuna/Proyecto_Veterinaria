@model VeterinariaWebApp.Models.Usuario.Cliente.PerfilClienteViewModel

@{
    ViewData["Title"] = "Mi Perfil";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<!-- Flatpickr CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/themes/material_green.css">

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-user-circle text-primary me-2"></i> Mi Perfil
        </h1>
    </div>

    <!-- Mensajes de éxito o error -->
    @if (TempData["Exito"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Exito"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <!-- Tarjeta de información -->
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-gradient-primary">
                    <h6 class="m-0 font-weight-bold text-white">
                        <i class="fas fa-id-card me-2"></i>Información de Cuenta
                    </h6>
                </div>
                <div class="card-body text-center">
                    <div class="profile-avatar mb-3">
                        <i class="fas fa-user-circle fa-6x text-primary"></i>
                    </div>
                    <h5 class="font-weight-bold text-gray-800">@Model.nom_usr @Model.ape_usr</h5>
                    <p class="text-muted mb-2">
                        <i class="fas fa-envelope me-1"></i>@Model.cor_usr
                    </p>
                    <span class="badge bg-success px-3 py-2">
                        <i class="fas fa-paw me-1"></i>Cliente MiVet
                    </span>

                    <hr class="my-4">

                    <div class="text-start">
                        <p class="mb-2">
                            <strong><i class="fas fa-id-badge me-2 text-primary"></i>Documento:</strong><br>
                            <span class="ms-4">@Model.nom_doc - @Model.num_doc</span>
                        </p>
                        <p class="mb-0">
                            <strong><i class="fas fa-birthday-cake me-2 text-primary"></i>Fecha de Nacimiento:</strong><br>
                            <span class="ms-4">@Model.fna_usr.ToString("dd 'de' MMMM 'de' yyyy")</span>
                        </p>
                    </div>
                </div>
            </div>

            <!-- Información adicional -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle me-2"></i>Información
                    </h6>
                </div>
                <div class="card-body">
                    <p class="text-muted small mb-2">
                        <i class="fas fa-lock me-1"></i> El correo y la contraseña no pueden ser modificados desde aquí.
                    </p>
                    <p class="text-muted small mb-0">
                        <i class="fas fa-shield-alt me-1"></i> Tus datos están protegidos y seguros.
                    </p>
                </div>
            </div>
        </div>

        <!-- Formulario de edición -->
        <div class="col-xl-8 col-lg-7">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-gradient-success">
                    <h6 class="m-0 font-weight-bold text-white">
                        <i class="fas fa-edit me-2"></i>Editar Datos Personales
                    </h6>
                </div>
                <div class="card-body">
                    <form asp-action="Perfil" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Correo (solo lectura) -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-envelope me-1 text-muted"></i>Correo electrónico
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-lock text-muted"></i>
                                </span>
                                <input type="text" class="form-control bg-light" value="@Model.cor_usr" readonly disabled>
                            </div>
                            <small class="text-muted">El correo no puede ser modificado</small>
                        </div>

                        <hr class="my-4">

                        <!-- Nombres y Apellidos -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="nom_usr" class="form-label fw-bold">
                                    <i class="fas fa-user me-1 text-primary"></i>Nombres
                                </label>
                                <input asp-for="nom_usr" class="form-control" placeholder="Ingrese sus nombres" />
                                <span asp-validation-for="nom_usr" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ape_usr" class="form-label fw-bold">
                                    <i class="fas fa-user me-1 text-primary"></i>Apellidos
                                </label>
                                <input asp-for="ape_usr" class="form-control" placeholder="Ingrese sus apellidos" />
                                <span asp-validation-for="ape_usr" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Tipo y Número de documento -->
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="ide_doc" class="form-label fw-bold">
                                    <i class="fas fa-id-card me-1 text-primary"></i>Tipo de Documento
                                </label>
                                <select asp-for="ide_doc" asp-items="@ViewBag.TiposDocumento" class="form-select">
                                    <option value="">Seleccione...</option>
                                </select>
                                <span asp-validation-for="ide_doc" class="text-danger small"></span>
                            </div>
                            <div class="col-md-8 mb-3">
                                <label asp-for="num_doc" class="form-label fw-bold">
                                    <i class="fas fa-hashtag me-1 text-primary"></i>Número de Documento
                                </label>
                                <input asp-for="num_doc" class="form-control" placeholder="Ingrese su documento" maxlength="12" />
                                <span asp-validation-for="num_doc" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Fecha de nacimiento -->
                        <div class="mb-4">
                            <label asp-for="fna_usr" class="form-label fw-bold">
                                <i class="fas fa-calendar-alt me-1 text-primary"></i>Fecha de Nacimiento
                            </label>
                            <input asp-for="fna_usr" type="text" class="form-control datepicker" 
                                   id="fna_usr" placeholder="Seleccione su fecha de nacimiento" readonly />
                            <span asp-validation-for="fna_usr" class="text-danger small"></span>
                        </div>

                        <hr class="my-4">

                        <!-- Botones -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Volver al Dashboard
                            </a>
                            <button type="submit" class="btn btn-success px-4">
                                <i class="fas fa-save me-1"></i>Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- Flatpickr JS -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/es.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Calcular fecha máxima (18 años atrás)
            const hoy = new Date();
            const fechaMaxima = new Date(hoy.getFullYear() - 18, hoy.getMonth(), hoy.getDate());

            // Obtener fecha actual del modelo
            const fechaActual = '@Model.fna_usr.ToString("yyyy-MM-dd")';

            // Inicializar Flatpickr
            flatpickr("#fna_usr", {
                locale: "es",
                dateFormat: "Y-m-d",
                altInput: true,
                altFormat: "d \\de F \\de Y",
                minDate: "1900-01-01",
                maxDate: fechaMaxima,
                defaultDate: fechaActual,
                disableMobile: false,
                monthSelectorType: "dropdown",
                animate: true
            });

            // Solo permitir números en el campo de documento
            document.getElementById('num_doc').addEventListener('input', function (e) {
                this.value = this.value.replace(/[^0-9]/g, '');
            });

            // Auto-cerrar alertas después de 5 segundos
            setTimeout(function () {
                var alerts = document.querySelectorAll('.alert');
                alerts.forEach(function (alert) {
                    var bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 5000);
        });
    </script>
}

<style>
    .profile-avatar {
        padding: 20px;
    }

    .profile-avatar i {
        color: #28a745 !important;
        transition: transform 0.3s ease;
    }

    .profile-avatar:hover i {
        transform: scale(1.1);
    }

    .card-header.bg-gradient-primary {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%) !important;
    }

    .card-header.bg-gradient-success {
        background: linear-gradient(135deg, #1e7e34 0%, #28a745 100%) !important;
    }

    .form-control:focus, .form-select:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
    }

    .btn-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        border: none;
        transition: all 0.3s ease;
    }

    .btn-success:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(40, 167, 69, 0.4);
    }

    .badge.bg-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%) !important;
    }

    /* Estilos Flatpickr */
    .flatpickr-calendar {
        border-radius: 10px !important;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15) !important;
    }

    .flatpickr-months {
        background: linear-gradient(135deg, #28a745, #20c997) !important;
        border-radius: 10px 10px 0 0 !important;
    }

    .flatpickr-current-month {
        color: white !important;
    }

    .flatpickr-day.selected {
        background: #28a745 !important;
        border-color: #28a745 !important;
    }

    .input-group-text {
        border-color: #ced4da;
    }
</style>
