@model IEnumerable<VeterinariaWebApp.Models.Usuario.Cliente.CitaCliente>

@{
    ViewData["Title"] = "Mis Citas";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
    var clienteId = Context.Session.GetInt32("ClienteId");
}

<a class="btn btn-primary mb-2" asp-controller="Cita" asp-action="IniciarCreacionCita">Crear Cita</a>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Mis Citas</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.ide_cit)</th>
                        <th>@Html.DisplayNameFor(model => model.cal_cit)</th>
                        <th>@Html.DisplayNameFor(model => model.con_cit)</th>
                        <th>@Html.DisplayNameFor(model => model.veterinario)</th>
                        <th>@Html.DisplayNameFor(model => model.especialidad)</th>
                        <th>@Html.DisplayNameFor(model => model.mascota)</th>
                        <th>@Html.DisplayNameFor(model => model.especie)</th>
                        <th>@Html.DisplayNameFor(model => model.mon_pag)</th>
                        <th>ACCIONES</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.ide_cit)</td>
                            <td>@Html.DisplayFor(modelItem => item.cal_cit)</td>
                            <td>@Html.DisplayFor(modelItem => item.con_cit)</td>
                            <td>@Html.DisplayFor(modelItem => item.veterinario)</td>
                            <td>@Html.DisplayFor(modelItem => item.especialidad)</td>
                            <td>@Html.DisplayFor(modelItem => item.mascota)</td>
                            <td>@Html.DisplayFor(modelItem => item.especie)</td>
                            <td>@Html.DisplayFor(modelItem => item.mon_pag)</td>
                            <td>
                                <a href="@Url.Action("DetalleCita", "Cita", new { id = item.ide_cit })" class="btn btn-info me-2">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>