@model List<VeterinariaWebApp.Models.Usuario.CitaCliente>

@{
    ViewData["Title"] = "Mis Citas";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-calendar-check text-success"></i> Mis Citas
    </h1>
    <a href="@Url.Action("Agendar", "Cita")" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm">
        <i class="fas fa-calendar-plus fa-sm text-white-50"></i> Agendar Nueva Cita
    </a>
</div>


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-success">
            <i class="fas fa-list"></i> Historial de Citas
        </h6>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>ID</th>
                            <th>Fecha</th>
                            <th>Consultorio</th>
                            <th>Veterinario</th>
                            <th>Especialidad</th>
                            <th>Mascota</th>
                            <th>Especie</th>
                            <th>Monto</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cita in Model)
                        {
                            <tr>
                                <td>@cita.ide_cit</td>
                                <td>@cita.cal_cit.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-center">
                                    <span class="badge badge-primary">@cita.con_cit</span>
                                </td>
                                <td>@cita.veterinario</td>
                                <td>
                                    <span class="badge badge-info">@cita.especialidad</span>
                                </td>
                                <td>@cita.mascota</td>
                                <td>@cita.especie</td>
                                <td class="text-right">
                                    <strong>S/ @cita.mon_pag.ToString("N2")</strong>
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("Detalle", "Cita", new { id = cita.ide_cit })"
                                       class="btn btn-sm btn-info" title="Ver Detalles">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    @if (cita.cal_cit > DateTime.Now)
                                    {
                                        <a href="@Url.Action("Cancelar", "Cita", new { id = cita.ide_cit })"
                                           class="btn btn-sm btn-danger" title="Cancelar Cita">
                                            <i class="fas fa-times"></i>
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle fa-3x mb-3"></i>
                <h5>No tienes citas registradas</h5>
                <p>Â¡Agenda tu primera cita para cuidar la salud de tu mascota!</p>
                <a href="@Url.Action("Agendar", "Cita")" class="btn btn-success">
                    <i class="fas fa-calendar-plus"></i> Agendar Cita
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Spanish.json"
                },
                "order": [[1, "desc"]]
            });
        });
    </script>
}