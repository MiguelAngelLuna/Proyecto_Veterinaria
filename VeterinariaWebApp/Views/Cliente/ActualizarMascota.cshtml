@model VeterinariaWebApp.Models.Mascota.Mascota

@{
    ViewData["Title"] = "Actualizar Mascota";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-success">
            <div class="card-header bg-success text-white">
                <h2 class="card-title mb-0">
                    <i class="fas fa-edit me-2"></i>Actualizar Mascota
                </h2>
            </div>

            <div class="card-body">
                @if (!string.IsNullOrEmpty(ViewBag.Mensaje))
                {
                    <div class="alert alert-info">@ViewBag.Mensaje</div>
                }

                <form asp-action="ActualizarMascota" method="post">
                    <input asp-for="IdMascota" type="hidden" />

                    <div class="form-group mb-3">
                        <label asp-for="Nombre" class="form-label fw-bold text-success">Nombre</label>
                        <input asp-for="Nombre" class="form-control" required />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Especie" class="form-label fw-bold text-success">Especie</label>
                        <input asp-for="Especie" class="form-control" required />
                        <span asp-validation-for="Especie" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Raza" class="form-label fw-bold text-success">Raza</label>
                        <input asp-for="Raza" class="form-control" />
                        <span asp-validation-for="Raza" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="FechaNacimiento" class="form-label fw-bold text-success">Fecha de Nacimiento</label>
                        <input asp-for="FechaNacimiento" type="date" class="form-control" required />
                        <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-start mt-5">
                        <button type="submit" class="btn btn-success me-3">
                            <i class="fas fa-sync-alt me-2"></i> Actualizar
                        </button>
                        <a asp-action="listaMascotasPorCliente" asp-route-ide_usr="@Context.Session.GetInt32("ClienteId")" class="btn btn-outline-success">
                            <i class="fas fa-arrow-left me-1"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), url('/images/fondo-veterinaria.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Poppins', sans-serif;
        color: #333;
    }

    .card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 16px;
        border: none;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        overflow: hidden;
    }

    .card-header {
        background: linear-gradient(135deg, #2e7d32, #43a047, #66bb6a);
        color: #fff;
        padding: 1.5rem;
        border-bottom: none;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .card-header h2 {
            font-weight: 600;
            margin: 0;
            font-size: 1.5rem;
        }

    .form-label {
        color: #2e7d32 !important;
        font-weight: 600;
    }

    .form-control {
        border: 1.5px solid #a5d6a7;
        border-radius: 10px;
        padding: 0.8rem 1rem;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #43a047;
            box-shadow: 0 0 8px rgba(76, 175, 80, 0.3);
        }

    .btn {
        border-radius: 10px;
        font-weight: 500;
        transition: all 0.3s ease;
        padding: 0.9rem 2rem;
        font-size: 0.95rem;
    }

    .btn-success {
        background: linear-gradient(135deg, #2e7d32, #43a047, #66bb6a);
        border: none;
        color: white;
        box-shadow: 0 4px 10px rgba(46, 125, 50, 0.4);
    }

        .btn-success:hover {
            background: linear-gradient(135deg, #1b5e20, #388e3c);
            box-shadow: 0 0 15px rgba(76, 175, 80, 0.6);
            transform: translateY(-2px);
        }

    .btn-outline-success {
        border: 2px solid #43a047;
        color: #2e7d32;
        background-color: transparent;
    }

        .btn-outline-success:hover {
            background: #43a047;
            color: white;
            box-shadow: 0 0 10px rgba(76, 175, 80, 0.4);
            transform: translateY(-2px);
        }

    .btn + .btn {
        margin-left: 10px;
    }
</style>
