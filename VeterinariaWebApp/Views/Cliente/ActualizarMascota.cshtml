@model VeterinariaWebApp.Models.Mascota.Mascota

@{
    ViewData["Title"] = "Editar Mascota";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
    var clienteId = Context.Session.GetInt32("ClienteId");
}

<!-- Flatpickr CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/themes/material_green.css">

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-edit text-warning me-2"></i> Editar Mascota
        </h1>
        <a asp-action="listaMascotasPorCliente" asp-route-ide_usr="@clienteId" class="btn btn-secondary btn-sm">
            <i class="fas fa-arrow-left me-1"></i> Volver al listado
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow-lg border-0">
                <div class="card-header py-3 bg-gradient-warning text-white">
                    <div class="d-flex align-items-center">
                        <div class="icon-circle bg-white text-warning me-3">
                            <i class="fas fa-paw fa-lg"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 fw-bold">Editando: @Model.Nombre</h5>
                            <small class="opacity-75">Modifique los datos que desee actualizar</small>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(ViewBag.Mensaje))
                    {
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            <i class="fas fa-info-circle me-2"></i>@ViewBag.Mensaje
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="ActualizarMascota" method="post" id="formActualizar">
                        <input asp-for="IdMascota" type="hidden" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Nombre -->
                        <div class="mb-4">
                            <label asp-for="Nombre" class="form-label fw-bold">
                                <i class="fas fa-tag me-1 text-warning"></i> Nombre de la Mascota
                            </label>
                            <input asp-for="Nombre" class="form-control form-control-lg" 
                                   placeholder="Nombre de la mascota" maxlength="50" />
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>

                        <!-- Especie y Raza -->
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="Especie" class="form-label fw-bold">
                                    <i class="fas fa-paw me-1 text-warning"></i> Especie
                                </label>
                                <select asp-for="Especie" class="form-select form-select-lg" id="selectEspecie">
                                    <option value="">Seleccione una especie</option>
                                    <option value="Perro" @@(Model.Especie == "Perro" ? "selected" : "")>üêï Perro</option>
                                    <option value="Gato" @@(Model.Especie == "Gato" ? "selected" : "")>üê± Gato</option>
                                    <option value="Ave" @@(Model.Especie == "Ave" ? "selected" : "")>üê¶ Ave</option>
                                    <option value="Conejo" @@(Model.Especie == "Conejo" ? "selected" : "")>üê∞ Conejo</option>
                                    <option value="Hamster" @@(Model.Especie == "Hamster" ? "selected" : "")>üêπ H√°mster</option>
                                    <option value="Pez" @@(Model.Especie == "Pez" ? "selected" : "")>üê† Pez</option>
                                    <option value="Tortuga" @@(Model.Especie == "Tortuga" ? "selected" : "")>üê¢ Tortuga</option>
                                    <option value="Otro" @@(Model.Especie == "Otro" ? "selected" : "")>üìã Otro</option>
                                </select>
                                <span asp-validation-for="Especie" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-4">
                                <label asp-for="Raza" class="form-label fw-bold">
                                    <i class="fas fa-dna me-1 text-warning"></i> Raza
                                </label>
                                <input asp-for="Raza" class="form-control form-control-lg" 
                                       placeholder="Raza de la mascota" maxlength="50" />
                                <span asp-validation-for="Raza" class="text-danger small"></span>
                            </div>
                        </div>



                        <!-- Fecha de Nacimiento -->
                        <div class="mb-4">
                            <label asp-for="FechaNacimiento" class="form-label fw-bold">
                                <i class="fas fa-birthday-cake me-1 text-warning"></i> Fecha de Nacimiento
                            </label>
                            <input asp-for="FechaNacimiento" type="text" class="form-control form-control-lg datepicker" 
                                   id="fechaNacimiento" placeholder="Seleccione la fecha" readonly />
                            <span asp-validation-for="FechaNacimiento" class="text-danger small"></span>
                        </div>

                        <!-- Info -->
                        <div class="alert alert-light border-warning mb-4">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-info-circle text-warning me-2 fa-lg"></i>
                                <div>
                                    <strong>ID de Mascota:</strong> #@Model.IdMascota
                                </div>
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="listaMascotasPorCliente" asp-route-ide_usr="@clienteId" 
                               class="btn btn-outline-secondary btn-lg px-4">
                                <i class="fas fa-times me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg px-5 text-white" id="btnActualizar">
                                <i class="fas fa-save me-1"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- Flatpickr JS -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/es.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const fechaActual = '@Model.FechaNacimiento.ToString("yyyy-MM-dd")';

            flatpickr("#fechaNacimiento", {
                locale: "es",
                dateFormat: "Y-m-d",
                altInput: true,
                altFormat: "d \\de F \\de Y",
                minDate: "1990-01-01",
                maxDate: "today",
                defaultDate: fechaActual,
                disableMobile: false,
                monthSelectorType: "dropdown",
                animate: true
            });

            // Loading en submit
            document.getElementById('formActualizar').addEventListener('submit', function(e) {
                document.getElementById('btnActualizar').innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i> Guardando...';
                document.getElementById('btnActualizar').disabled = true;
            });
        });
    </script>
}

<style>
    .bg-gradient-warning {
        background: linear-gradient(135deg, #f39c12 0%, #f1c40f 50%, #f9ca24 100%) !important;
    }

    .icon-circle {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card {
        border-radius: 15px;
        overflow: hidden;
    }

    .form-control, .form-select {
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

    .form-control:focus, .form-select:focus {
        border-color: #f39c12;
        box-shadow: 0 0 0 0.2rem rgba(243, 156, 18, 0.25);
    }

    .btn-warning {
        background: linear-gradient(135deg, #f39c12 0%, #f1c40f 100%);
        border: none;
        transition: all 0.3s ease;
    }

    .btn-warning:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(243, 156, 18, 0.4);
    }

    .flatpickr-day.selected {
        background: #f39c12 !important;
        border-color: #f39c12 !important;
    }
</style>
