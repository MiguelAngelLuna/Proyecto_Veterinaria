@model List<VeterinariaWebApp.Models.Mascota.Mascota>

@{
    ViewData["Title"] = "Mis Mascotas";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-dog text-success"></i> Mis Mascotas
    </h1>
    <a href="@Url.Action("Crear", "Mascota")" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50"></i> Registrar Nueva Mascota
    </a>
</div>


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-success">
            <i class="fas fa-paw"></i> Lista de Mascotas Registradas
        </h6>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="row">
                @foreach (var mascota in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card border-success h-100 mascota-card">
                            <div class="card-header bg-success text-white text-center">
                                <i class="fas fa-paw fa-2x mb-2"></i>
                                <h5 class="mb-0">@mascota.Nombre</h5>
                            </div>
                            <div class="card-body">
                                <p class="mb-2">
                                    <strong><i class="fas fa-tag text-success"></i> Especie:</strong> @mascota.Especie
                                </p>
                                <p class="mb-2">
                                    <strong><i class="fas fa-dna text-success"></i> Raza:</strong> @(mascota.Raza ?? "No especificada")
                                </p>
                                <p class="mb-0">
                                    <strong><i class="fas fa-birthday-cake text-success"></i> Fecha Nac.:</strong>
                                    @mascota.FechaNacimiento.ToString("dd/MM/yyyy")
                                </p>
                            </div>
                            <div class="card-footer bg-light">
                                <div class="btn-group btn-group-sm w-100" role="group">
                                    <a href="@Url.Action("Detalle", "Mascota", new { id = mascota.IdMascota })"
                                       class="btn btn-info" title="Ver Detalles">
                                        <i class="fas fa-eye"></i> Ver
                                    </a>
                                    <a href="@Url.Action("Editar", "Mascota", new { id = mascota.IdMascota })"
                                       class="btn btn-warning" title="Editar">
                                        <i class="fas fa-edit"></i> Editar
                                    </a>
                                    <a href="@Url.Action("Eliminar", "Mascota", new { id = mascota.IdMascota })"
                                       class="btn btn-danger" title="Eliminar">
                                        <i class="fas fa-trash"></i> Eliminar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle fa-3x mb-3"></i>
                <h5>No tienes mascotas registradas</h5>
                <p>Â¡Registra a tu primera mascota para comenzar a agendar citas!</p>
                <a href="@Url.Action("Crear", "Mascota")" class="btn btn-success">
                    <i class="fas fa-plus-circle"></i> Registrar Mascota
                </a>
            </div>
        }
    </div>
</div>

<style>
    .mascota-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .mascota-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.15) !important;
        }

    .card-footer .btn-group {
        display: flex;
    }

    .card-footer .btn {
        flex: 1;
    }
</style>