@model VeterinariaWebApp.Models.Usuario.Cliente.ClienteO

@{
    ViewData["Title"] = "Nuevo Cliente";
    Layout = "~/Views/Shared/_LayoutRecepcionista.cshtml";
    var listaDocumentos = ViewBag.documentos as SelectList;
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-primary">
            <div class="card-header bg-primary text-white">
                <h2 class="card-title mb-0">
                    <i class="fas fa-user-plus"></i> Registrar Nuevo Cliente
                </h2>
            </div>

            <div class="card-body">
                <form asp-action="NuevoCliente">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="cor_usr" class="form-label fw-bold">
                            <i class="fas fa-envelope"></i>@Html.DisplayNameFor(m => m.cor_usr)
                        </label>
                        <input asp-for="cor_usr" class="form-control" type="email" maxlength="100" minlength="8" />
                        <span asp-validation-for="cor_usr" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="pwd_usr" class="form-label fw-bold">
                            <i class="fas fa-lock"></i>@Html.DisplayNameFor(m => m.pwd_usr)
                        </label>
                        <input asp-for="pwd_usr" class="form-control" type="password" maxlength="150" minlength="8" />
                        <span asp-validation-for="pwd_usr" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="nom_usr" class="form-label fw-bold">
                            <i class="fas fa-user"></i>@Html.DisplayNameFor(m => m.nom_usr)
                        </label>
                        <input asp-for="nom_usr" class="form-control" maxlength="100" minlength="8" />
                        <span asp-validation-for="nom_usr" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ape_usr" class="form-label fw-bold">
                            <i class="fas fa-user-tag"></i>@Html.DisplayNameFor(m => m.ape_usr)
                        </label>
                        <input asp-for="ape_usr" class="form-control" maxlength="100" minlength="8" />
                        <span asp-validation-for="ape_usr" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="fna_usr" class="form-label fw-bold">
                            <i class="fas fa-calendar-alt"></i>@Html.DisplayNameFor(m => m.fna_usr)
                        </label>
                        <input asp-for="fna_usr" class="form-control" />
                        <span asp-validation-for="fna_usr" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="num_doc" class="form-label fw-bold">
                            <i class="fas fa-id-card"></i>@Html.DisplayNameFor(m => m.num_doc)
                        </label>
                        <input asp-for="num_doc" class="form-control" maxlength="12" minlength="8" />
                        <span asp-validation-for="num_doc" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ide_doc" class="form-label fw-bold">
                            <i class="fas fa-file-alt"></i>@Html.DisplayNameFor(m => m.ide_doc)
                        </label>
                        @Html.DropDownListFor(model => model.ide_doc, listaDocumentos, new { @class = "form-control" })
                        <span asp-validation-for="ide_doc" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-start">
                        <button type="submit" class="btn btn-success" style="margin-right: 8px;">
                            <i class="fas fa-user-check"></i> Confirmar
                        </button>
                        <a asp-controller="Recepcionista" asp-action="listarClientes" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver a la lista
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(rgba(0, 0, 0, 0.45), rgba(0, 0, 0, 0.45)), url('/images/fondo-veterinaria.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Poppins', sans-serif;
        color: #333;
    }

    .container, .row {
        margin-top: 50px;
    }

    .card {
        background: rgba(255, 255, 255, 0.96);
        border: none;
        border-radius: 16px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        overflow: hidden;
        backdrop-filter: blur(6px);
        border-top: 6px solid #28a745;
    }

    .card-header {
        background: linear-gradient(90deg, #28a745, #00c97b, #28a745);
        background-size: 200% 100%;
        animation: moveGradient 5s infinite linear;
        color: white;
        padding: 1.5rem;
        font-size: 1.3rem;
        letter-spacing: 0.5px;
        border-bottom: none;
    }

        .card-header h2 {
            font-weight: 600;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 15px;
        }

    .card-body {
        padding: 2rem;
    }

    .form-label {
        color: #1b6b3f;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 6px;
    }

        .form-label i {
            color: #1b6b3f;
            font-size: 1.1rem;
        }

    .form-control {
        border-radius: 10px;
        border: 1px solid #ccc;
        padding: 10px 15px;
        transition: all 0.3s ease;
        font-size: 0.95rem;
    }

        .form-control:focus {
            border-color: #28a745;
            box-shadow: 0 0 8px rgba(40, 167, 69, 0.3);
            background-color: #fff;
        }

    .btn {
        font-weight: 600;
        border-radius: 10px;
        transition: all 0.3s ease;
        font-size: 0.95rem;
        padding: 0.8rem 1.5rem;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .btn-success {
        background: linear-gradient(135deg, #28a745, #00c97b);
        border: none;
        color: white;
        box-shadow: 0 4px 12px rgba(40, 167, 69, 0.3);
    }

        .btn-success:hover {
            background: linear-gradient(135deg, #1e8b3d, #00b26d);
            box-shadow: 0 0 15px rgba(40, 167, 69, 0.5);
            transform: translateY(-2px);
        }

    .btn-secondary {
        background: #f0f0f0;
        border: 1px solid #ccc;
        color: #555;
    }

        .btn-secondary:hover {
            background: #e9ecef;
            color: #333;
            transform: translateY(-2px);
        }

    @@keyframes moveGradient {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }
</style>