@{
    ViewData["Title"] = "Inicio - Recepcionista";
    Layout = "~/Views/Shared/_LayoutRecepcionista.cshtml";

    // Obtener el nombre de la recepcionista desde la sesión
    var nombreRecepcionista = Context.Session.GetString("NombreUsuario") ?? "Recepcionista";
}

<div class="container-fluid">
    <!-- Bienvenida -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0" style="background: linear-gradient(135deg, #f8f9fa 0%, #e8ecef 100%);">
                <div class="card-body p-4 d-flex align-items-center justify-content-between">
                    <div>
                        <h2 class="font-weight-bold text-success mb-1">¡Hola, @nombreRecepcionista!</h2>
                        <p class="text-muted mb-0">Aquí tienes un resumen de tu agenda para hoy.</p>
                    </div>
                    <div id="dashboard-animation" style="width: 300px; height: 240px;"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card bg-warning text-white shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between">
                        <h6 class="mb-0">Citas Pendientes</h6>
                        <i class="fas fa-clock fa-lg"></i>
                    </div>
                    <div class="mt-auto">
                        <h3 class="font-weight-bold mb-0">@ViewBag.CitasPendientes</h3>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <a href="@Url.Action("CitasPendientes", "Cita")" class="text-white text-decoration-none">Ver más →</a>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card bg-info text-white shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between">
                        <h6 class="mb-0">Citas Vencidas</h6>
                        <i class="fas fa-hourglass-end fa-lg"></i>
                    </div>
                    <div class="mt-auto">
                        <h3 class="font-weight-bold mb-0">@ViewBag.CitasVencidas</h3>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <a href="@Url.Action("CitasVencidas", "Cita")" class="text-white text-decoration-none">Ver más →</a>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card bg-success text-white shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between">
                        <h6 class="mb-0">Citas Atendidas</h6>
                        <i class="fas fa-check-circle fa-lg"></i>
                    </div>
                    <div class="mt-auto">
                        <h3 class="font-weight-bold mb-0">@ViewBag.CitasAtendidas</h3>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <a href="@Url.Action("CitasAtendidas", "Cita")" class="text-white text-decoration-none">Ver más →</a>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card bg-danger text-white shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between">
                        <h6 class="mb-0">Citas Canceladas</h6>
                        <i class="fas fa-times-circle fa-lg"></i>
                    </div>
                    <div class="mt-auto">
                        <h3 class="font-weight-bold mb-0">@ViewBag.CitasCanceladas</h3>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <a href="@Url.Action("CitasCanceladas", "Cita")" class="text-white text-decoration-none">Ver más →</a>
                </div>
            </div>
        </div>
    </div>



        <!-- Gráfico Circular (centro) -->
        <div class="col-lg-8 col-md-12 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Distribución de Citas</h6>
                </div>
                <div class="card-body">
                    <canvas id="citasChart" width="750" height="350"></canvas>
                </div>
            </div>
        </div>
    </div>



@section Scripts {
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js  "></script>
    <!-- Lottie.js (local) -->
    <script src="~/lib/lottie-player.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Cargar animación de bienvenida
            const animation = lottie.loadAnimation({
                container: document.getElementById("dashboard-animation"),
                renderer: "svg",
                loop: true,
                autoplay: true,
                path: "/img/Recepcionita_1.json"
            });

     

            // Crear gráfico circular
            const ctx = document.getElementById('citasChart').getContext('2d');
            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Pendientes', 'Vencidas', 'Atendidas', 'Canceladas'],
                    datasets: [{
                        label: 'Citas',
                        data: [@ViewBag.CitasPendientes, @ViewBag.CitasVencidas, @ViewBag.CitasAtendidas, @ViewBag.CitasCanceladas],
                        backgroundColor: [
                            'rgba(255, 193, 7, 0.8)',
                            'rgba(220, 53, 69, 0.8)',
                            'rgba(40, 167, 69, 0.8)',
                            'rgba(221, 80, 80, 0.8)'
                        ],
                        borderColor: [
                            'rgba(255, 193, 7, 1)',
                            'rgba(220, 53, 69, 1)',
                            'rgba(40, 167, 69, 1)',
                            'rgba(221, 80, 80, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                                position: 'right',
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    label += context.raw + ' citas';
                                    return label;
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
}