@{
    ViewData["Title"] = "Inicio - Recepcionista";
    Layout = "~/Views/Shared/_LayoutRecepcionista.cshtml";
}

<div class="row">
    <div class="col-12 mb-4 text-center">
        <div class="d-sm-flex align-items-center justify-content-between">
            <h1 class="h3 mb-0 text-success font-weight-bold">
                <i class="fas fa-paw text-success mr-2"></i>MI VET ONLINE
            </h1>
            <span class="badge badge-pill shadow-sm px-3 py-2"
                  style="background-color:#28a745; color:white; font-size:1rem;">
                <i class="fas fa-user-tie mr-2"></i> Recepcionista
            </span>
        </div>
        <hr class="mt-3 mb-4" style="border-top: 3px solid #28a745; width: 80%; margin: 0 auto;">
    </div>

    <div id="patient-animation"
         style="width: 380px; height: 380px; margin: 0 auto;
                background-color: #f0fdf4; border-radius: 20px;
                box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
                display: flex; align-items: center; justify-content: center;">
    </div>
</div>

<script>
    var animation = lottie.loadAnimation({
        container: document.getElementById("patient-animation"),
        renderer: "svg",
        loop: true,
        autoplay: true,
        path: "/img/ReceptionAnimation.json"
    });
</script>
