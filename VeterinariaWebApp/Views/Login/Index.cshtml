@{
    ViewData["Title"] = "Iniciar Sesión - MiVet Online";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="login-card p-4 shadow-lg">
        <div class="text-center mb-4">
            <img src="/img/veterinaria.png" alt="MiVet Logo" style="width: 80px;">
            <h3 class="fw-bold text-primary mt-2">MiVet Online</h3>
            <p class="text-muted">Accede a tu cuenta</p>
        </div>

        @if (TempData["MensajeExito"] != null)
        {
            <div class="alert alert-success text-center">
                <i class="fas fa-check-circle me-1"></i>@TempData["MensajeExito"]
            </div>
        }

        @if (ViewBag.Mensaje != null)
        {
            <div class="alert alert-danger text-center">
                @ViewBag.Mensaje
            </div>
        }

        <form asp-controller="Login" asp-action="Index" method="post">
            <div class="form-floating mb-3">
                <input type="email" class="form-control custom-input" id="uid" name="uid" placeholder="correo@ejemplo.com" value="@ViewBag.correo" required>
                <label for="uid"><i class="fas fa-envelope me-2"></i>Correo electrónico</label>
            </div>

            <div class="form-floating mb-4">
                <input type="password" class="form-control custom-input" id="pwd" name="pwd" placeholder="********" required>
                <label for="pwd"><i class="fas fa-lock me-2"></i>Contraseña</label>
            </div>

            <button type="submit" class="btn-login w-100 py-2 mb-3">
                <i class="fas fa-sign-in-alt me-2"></i>Ingresar
            </button>

            <!-- Link a Registro -->
            <div class="text-center">
                <span class="text-muted">¿No tienes cuenta?</span>
                <a asp-action="Registro" class="link-registro fw-bold">Regístrate aquí</a>
            </div>
        </form>
    </div>
</div>

<style>
    /* Fondo principal */
    body {
        margin: 0;
        padding: 0;
        background-color: #d4edda; /* verde muy suave */
        height: 100vh;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Segoe UI', sans-serif;
    }

    /* Caja principal */
    .login-card {
        background: rgba(230, 244, 234, 0.95); /* verde suave traslúcido */
        backdrop-filter: blur(12px);
        border-radius: 18px;
        width: 100%;
        max-width: 340px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.25);
        animation: fadeInUp 0.8s ease;
    }

        /* Títulos e iconos */
        .login-card h3.fw-bold {
            color: #155724; /* verde oscuro */
        }

        .login-card p {
            color: #155724cc; /* verde oscuro semi-transparente */
        }

        .login-card .fas {
            color: #28a745; /* verde principal */
        }

    /* Input moderno */
    .custom-input {
        border: 2px solid #85c997; /* verde medio */
        border-radius: 10px;
        transition: all 0.3s ease;
        background-color: #f0f9f0; /* verde muy claro */
        color: #155724;
    }

        .custom-input:focus {
            border-color: #28a745;
            box-shadow: 0 0 8px rgba(40, 167, 69, 0.4);
            background-color: #fff;
            color: #155724;
        }

    /* Botón con animación */
    .btn-login {
        background: linear-gradient(90deg, #28a745, #85c997, #28a745);
        background-size: 300% 100%;
        border: none;
        color: white;
        border-radius: 10px;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.4s ease;
        animation: gradientMove 4s linear infinite;
    }

        .btn-login:hover {
            transform: scale(1.03);
            box-shadow: 0 0 12px rgba(40, 167, 69, 0.5);
        }

    /* Animación del botón */
    @@keyframes gradientMove {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    /* Animación de entrada */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Alertas */
    .alert-danger {
        background-color: #ffcdd2; /* mantener rojo para error, no verde */
        color: #842029;
    }

    .form-floating label {
        color: #155724;
    }

    .link-registro {
        color: #28a745;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .link-registro:hover {
        color: #155724;
        text-decoration: underline;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: none;
        border-radius: 10px;
    }
</style>
