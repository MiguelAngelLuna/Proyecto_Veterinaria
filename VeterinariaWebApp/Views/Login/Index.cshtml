@{
    ViewData["Title"] = "Iniciar Sesión - MiVet Online";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="wizard-container">

    <!-- PANEL IZQUIERDO -->
    <aside class="wizard-sidebar">
        <div class="brand">
            <i class="fas fa-paw"></i> MiVet Online
        </div>

        <!-- LOGIN -->
        <ul class="steps">
            <li class="active"><span></span> Credenciales</li>
            <li><span></span> Verificación</li>
            <li><span></span> Acceso</li>
        </ul>

        <div class="sidebar-image"></div>
    </aside>

    <!-- PANEL DERECHO -->
    <main class="wizard-content">

        <h2 class="title">¡Bienvenido de nuevo!</h2>
        <p class="subtitle">Ingresa a tu cuenta de MiVet Online</p>

        @if (ViewBag.Mensaje != null)
        {
            <div class="alert alert-danger text-center">
                @ViewBag.Mensaje
            </div>
        }

        <form asp-controller="Login" asp-action="Index" method="post">

            <div class="mb-3">
                <label>Correo electrónico</label>
                <input type="email"
                       name="uid"
                       class="form-control"
                       placeholder="correo@ejemplo.com"
                       required />
            </div>

            <div class="mb-4">
                <label>Contraseña</label>
                <input type="password"
                       name="pwd"
                       class="form-control"
                       placeholder="********"
                       required />
            </div>

            <div class="actions">
                <div class="login-link">
                    <span>¿No tienes cuenta?</span>
                    <a asp-action="Registro" class="link-registro">Regístrate aquí</a>
                </div>

                <button type="submit" class="btn-next">
                    Ingresar
                    <i class="fas fa-arrow-right ms-2"></i>
                </button>
            </div>

        </form>
    </main>
</div>
<style>
    body {
        background: #6b7280;
        font-family: 'Segoe UI', sans-serif;
    }

    /* CONTENEDOR PRINCIPAL */
    .wizard-container {
        max-width: 1100px;
        height: 650px;
        margin: 40px auto;
        display: grid;
        grid-template-columns: 35% 65%;
        border-radius: 18px;
        overflow: hidden;
        box-shadow: 0 15px 40px rgba(0,0,0,.25);
    }

    /* PANEL IZQUIERDO */
    .wizard-sidebar {
        background: #5f6478;
        color: #fff;
        padding: 30px 25px;
        position: relative;
    }

    .brand {
        font-size: 1.5rem;
        font-weight: bold;
    }

    /* STEPS */
    .steps {
        list-style: none;
        padding: 0;
        margin-top: 40px;
    }

        .steps li {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 18px;
            opacity: .6;
        }

            .steps li span {
                width: 10px;
                height: 10px;
                border-radius: 50%;
                background: #cbd5e1;
            }

            .steps li.active {
                opacity: 1;
                font-weight: 600;
            }

                .steps li.active span {
                    background: #fff;
                }

    /* IMAGEN */
    .sidebar-image {
        position: absolute;
        bottom: -50px;
        left: 0;
        width: 100%;
        height: 60%;
        background: url('/img/perro2.png') center / cover no-repeat;
        opacity: 0.9;
    }

    /* PANEL DERECHO */
    .wizard-content {
        background: #fdeeee;
        padding: 40px 60px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .title {
        font-weight: 700;
    }

    .subtitle {
        color: #6b7280;
        margin-bottom: 30px;
    }

    /* INPUTS */
    .form-control {
        border-radius: 10px;
        padding: 10px 14px;
    }

    /* ACCIONES */
    .actions {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-top: 25px;
    }

    .login-link {
        font-size: 0.9rem;
        color: #6b7280;
    }

    .link-registro {
        color: #5f6478;
        font-weight: 600;
        text-decoration: none;
    }

        .link-registro:hover {
            text-decoration: underline;
        }

    /* BOTÓN */
    .btn-next {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 20px;
        border-radius: 999px;
        background: linear-gradient(135deg, #5f6478, #374151);
        color: #fff;
        font-weight: 600;
        font-size: 0.95rem;
        letter-spacing: 0.3px;
        border: none;
        cursor: pointer;
        transition: all 0.35s ease;
        box-shadow: 0 10px 22px rgba(0, 0, 0, 0.25);
    }

        /* Hover elegante */
        .btn-next:hover {
            transform: translateY(-2px) scale(1.02);
            box-shadow: 0 16px 32px rgba(0, 0, 0, 0.35);
            background: linear-gradient(135deg, #6b7280, #4b5563);
        }

        /* Click */
        .btn-next:active {
            transform: translateY(0) scale(0.98);
            box-shadow: 0 6px 16px rgba(0, 0, 0, 0.25);
        }

        /* Icono */
        .btn-next i {
            font-size: 0.85rem;
            transition: transform 0.3s ease;
        }

        .btn-next:hover i {
            transform: translateX(4px);
        }


    /* RESPONSIVE */
    @@media (max-width: 576px) {
        .wizard-container

    {
        grid-template-columns: 1fr;
        height: auto;
    }

    .sidebar-image {
        height: 220px;
        position: relative;
    }

    .actions {
        flex-direction: column;
        align-items: stretch;
        gap: 15px;
        text-align: center;
    }

    .btn-next {
        justify-content: center;
        width: 100%;
    }

    }
</style>