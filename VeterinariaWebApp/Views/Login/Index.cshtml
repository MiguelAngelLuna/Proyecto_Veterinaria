@{
    ViewData["Title"] = "Iniciar Sesión - MiVet Online";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="login-container">
    <div class="login-card p-4 shadow-lg">
        <div class="text-center mb-4">
            <img src="~/img/veterinaria.png" alt="MiVet Logo" style="width: 80px;" onerror="this.style.display='none'">
            <h3 class="fw-bold text-primary mt-2">MiVet Online</h3>
            <p class="text-muted">Accede a tu cuenta</p>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            </div>
        }

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">
                <i class="fas fa-exclamation-circle"></i> @ViewBag.Error
            </div>
        }

        <form asp-controller="Login" asp-action="Ingresar" method="post">
            @Html.AntiForgeryToken()

            <div class="form-floating mb-3">
                <input type="email" class="form-control custom-input" id="correo" name="correo" placeholder="correo@ejemplo.com" required>
                <label for="correo"><i class="fas fa-envelope me-2"></i>Correo electrónico</label>
            </div>

            <div class="form-floating mb-4">
                <input type="password" class="form-control custom-input" id="contraseña" name="contraseña" placeholder="********" required>
                <label for="contraseña"><i class="fas fa-lock me-2"></i>Contraseña</label>
            </div>

            <button type="submit" class="btn-login w-100 py-2">
                <i class="fas fa-sign-in-alt me-2"></i>Ingresar
            </button>
        </form>

        <div class="text-center mt-3">
            <p class="text-muted">
                ¿No tienes cuenta?
                <a href="@Url.Action("Registro", "Login")" class="text-primary fw-bold">Regístrate aquí</a>
            </p>
        </div>
    </div>
</div>

<style>
    body {
        margin: 0;
        padding: 0;
    }

    .login-container {
        background-color: #d4edda;
        min-height: 100vh;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Segoe UI', sans-serif;
        padding: 20px;
    }

    .login-card {
        background: rgba(230, 244, 234, 0.95);
        backdrop-filter: blur(12px);
        border-radius: 18px;
        width: 100%;
        max-width: 400px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.25);
        animation: fadeInUp 0.8s ease;
    }

        .login-card h3.fw-bold {
            color: #155724;
        }

        .login-card p {
            color: #155724cc;
        }

        .login-card .fas {
            color: #28a745;
        }

    .custom-input {
        border: 2px solid #85c997;
        border-radius: 10px;
        transition: all 0.3s ease;
        background-color: #f0f9f0;
        color: #155724;
    }

        .custom-input:focus {
            border-color: #28a745;
            box-shadow: 0 0 8px rgba(40, 167, 69, 0.4);
            background-color: #fff;
            color: #155724;
        }

    .btn-login {
        background: linear-gradient(90deg, #28a745, #85c997, #28a745);
        background-size: 300% 100%;
        border: none;
        color: white;
        border-radius: 10px;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.4s ease;
        animation: gradientMove 4s linear infinite;
    }

        .btn-login:hover {
            transform: scale(1.03);
            box-shadow: 0 0 12px rgba(40, 167, 69, 0.5);
        }

    @@keyframes gradientMove {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
        border-radius: 8px;
    }

    .alert-danger {
        background-color: #ffcdd2;
        color: #842029;
        border: 1px solid #f5c6cb;
        border-radius: 8px;
    }

    .form-floating label {
        color: #155724;
    }

    .text-primary {
        color: #28a745 !important;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .text-primary:hover {
            color: #1e7e34 !important;
            text-decoration: underline;
        }
</style>