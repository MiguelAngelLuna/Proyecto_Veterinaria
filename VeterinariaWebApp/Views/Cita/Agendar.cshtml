@model VeterinariaWebApp.Models.Cita.CitaO

@{
    ViewData["Title"] = "Agendar Cita";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-calendar-plus text-primary"></i> Agendar Nueva Cita
    </h1>
    <a href="@Url.Action("MisCitas", "Cliente")" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
        <i class="fas fa-arrow-left fa-sm text-white-50"></i> Volver
    </a>
</div>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> @ViewBag.Error
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow mb-4 border-primary">
            <div class="card-header py-3 bg-primary text-white">
                <h6 class="m-0 font-weight-bold">
                    <i class="fas fa-clipboard-list"></i> Formulario de Cita
                </h6>
            </div>
            <div class="card-body">
                <form asp-controller="Cita" asp-action="Crear" method="post">
                    @Html.AntiForgeryToken()

                    <!-- Selección de Mascota -->
                    <div class="form-group mb-3">
                        <label asp-for="IdMascota" class="form-label font-weight-bold">
                            <i class="fas fa-dog text-primary"></i> Selecciona tu Mascota
                        </label>
                        <select asp-for="IdMascota" class="form-control" required>
                            <option value="">Seleccione una mascota...</option>
                            @if (ViewBag.Mascotas != null)
                            {
                                @foreach (var mascota in ViewBag.Mascotas)
                                {
                                    <option value="@mascota.IdMascota">@mascota.Nombre - @mascota.Especie</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="IdMascota" class="text-danger"></span>
                        <small class="form-text text-muted">
                            ¿No tienes mascotas registradas?
                            <a href="@Url.Action("Crear", "Mascota")">Registra una aquí</a>
                        </small>
                    </div>

                    <!-- Fecha y Hora -->
                    <div class="form-group mb-3">
                        <label asp-for="CalendarioCita" class="form-label font-weight-bold">
                            <i class="fas fa-calendar-alt text-primary"></i> Fecha y Hora de la Cita
                        </label>
                        <input asp-for="CalendarioCita" type="datetime-local" class="form-control" required />
                        <span asp-validation-for="CalendarioCita" class="text-danger"></span>
                        <small class="form-text text-muted">La cita debe ser programada para una fecha futura</small>
                    </div>

                    <!-- Consultorio -->
                    <div class="form-group mb-3">
                        <label asp-for="Consultorio" class="form-label font-weight-bold">
                            <i class="fas fa-door-open text-primary"></i> Número de Consultorio
                        </label>
                        <select asp-for="Consultorio" class="form-control" required>
                            <option value="">Seleccione un consultorio...</option>
                            <option value="1">Consultorio 1</option>
                            <option value="2">Consultorio 2</option>
                            <option value="3">Consultorio 3</option>
                            <option value="4">Consultorio 4</option>
                            <option value="5">Consultorio 5</option>
                        </select>
                        <span asp-validation-for="Consultorio" class="text-danger"></span>
                    </div>




                    <!-- Veterinario -->
                    <input asp-for="IdVeterinario" type="hidden" value="2" />

                    <!-- Método de Pago -->
                    <div class="form-group mb-3">
                        <label for="metodoPago" class="form-label font-weight-bold">
                            <i class="fas fa-credit-card text-primary"></i> Método de Pago
                        </label>
                        <select name="metodoPago" class="form-control" required>
                            <option value="">Seleccione un método...</option>
                            @if (ViewBag.MetodosPago != null)
                            {
                                @foreach (var metodo in ViewBag.MetodosPago)
                                {
                                    <option value="@metodo.ide_pay">@metodo.nom_pay</option>
                                }
                            }
                        </select>
                    </div>

                    <!-- Monto -->
                    <div class="form-group mb-4">
                        <label for="montoPago" class="form-label font-weight-bold">
                            <i class="fas fa-money-bill-wave text-primary"></i> Monto a Pagar (S/)
                        </label>
                        <input type="number" name="montoPago" class="form-control" step="0.01" min="0" value="50.00" placeholder="50.00" required />
                        <small class="form-text text-muted">Tarifa estándar: S/ 50.00</small>
                    </div>

                    <hr class="my-4">

                    <div class="row">
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-primary btn-block">
                                <i class="fas fa-check"></i> Agendar Cita
                            </button>
                        </div>
                        <div class="col-md-6">
                            <a href="@Url.Action("MisCitas", "Cliente")" class="btn btn-secondary btn-block">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- Información de ayuda -->
        <div class="card shadow mb-4 border-left-primary">
            <div class="card-body">
                <h6 class="font-weight-bold text-primary">
                    <i class="fas fa-info-circle"></i> Información Importante
                </h6>
                <ul class="mb-0">
                    <li>Las citas deben agendarse con al menos 24 horas de anticipación</li>
                    <li>El pago debe realizarse al momento de agendar</li>
                    <li>Puedes cancelar tu cita hasta 12 horas antes</li>
                    <li>Llega 10 minutos antes de tu cita</li>
                </ul>
            </div>
        </div>

        <!-- Horarios -->
        <div class="card shadow border-left-success">
            <div class="card-body">
                <h6 class="font-weight-bold text-success">
                    <i class="fas fa-clock"></i> Horarios de Atención
                </h6>
                <p class="mb-1"><strong>Lunes a Viernes:</strong> 8:00 AM - 8:00 PM</p>
                <p class="mb-0"><strong>Sábados:</strong> 9:00 AM - 2:00 PM</p>
                <p class="mb-0 text-danger"><strong>Domingos:</strong> Cerrado</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }

    .border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }
</style>