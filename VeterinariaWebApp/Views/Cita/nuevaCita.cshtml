@if (ViewBag.MensajePago != null)
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>@ViewBag.MensajePago
    </div>
}

@model VeterinariaWebApp.Models.Cita.CitaO

@{
    ViewData["Title"] = "Nueva Cita";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
    var clienteId = Context.Session.GetInt32("ClienteId");
}

<!-- Flatpickr CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/themes/material_green.css">

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-calendar-plus text-success me-2"></i> Agendar Nueva Cita
        </h1>
        <a asp-controller="Cliente" asp-action="listaCitaPorCliente" asp-route-ide_usr="@clienteId" 
           class="btn btn-secondary btn-sm">
            <i class="fas fa-arrow-left me-1"></i> Volver al listado
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow-lg border-0">
                <div class="card-header py-3 bg-gradient-success text-white">
                    <div class="d-flex align-items-center">
                        <div class="icon-circle bg-white text-success me-3">
                            <i class="fas fa-calendar-check fa-lg"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 fw-bold">Nueva Cita Veterinaria</h5>
                            <small class="opacity-75">Complete los datos para agendar la cita</small>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <form asp-action="nuevaCita" method="post" id="formCita">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Fecha y Hora -->
                        <div class="mb-4">
                            <label asp-for="CalendarioCita" class="form-label fw-bold">
                                <i class="fas fa-calendar-alt me-1 text-success"></i> Fecha y Hora de la Cita
                            </label>
                            <input asp-for="CalendarioCita" type="text" class="form-control form-control-lg" 
                                   id="fechaHoraCita" placeholder="Seleccione fecha y hora" readonly />
                            <span asp-validation-for="CalendarioCita" class="text-danger small"></span>
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                Horario de atención: Lunes a Sábado, 8:00 AM - 6:00 PM.
                                <strong>Cada cita tiene una duración de 30 minutos.</strong>
                                Por favor, seleccione un horario disponible.
                            </small>
                        </div>

                        <!-- Consultorio -->
                        <div class="mb-4">
                            <label asp-for="Consultorio" class="form-label fw-bold">
                                <i class="fas fa-door-open me-1 text-success"></i> Consultorio
                            </label>
                            <select asp-for="Consultorio" class="form-select form-select-lg">
                                <option value="">Seleccione un consultorio</option>
                                <option value="1">Consultorio 1 - Medicina General</option>
                                <option value="2">Consultorio 2 - Cirugía</option>
                                <option value="3">Consultorio 3 - Vacunación</option>
                                <option value="4">Consultorio 4 - Emergencias</option>
                                <option value="5">Consultorio 5 - Dermatología</option>
                            </select>
                            <span asp-validation-for="Consultorio" class="text-danger small"></span>
                        </div>

                        <!-- Veterinario -->
                        <div class="mb-4">
                            <label asp-for="IdVeterinario" class="form-label fw-bold">
                                <i class="fas fa-user-md me-1 text-success"></i> Veterinario
                            </label>
                            @Html.DropDownListFor(model => model.IdVeterinario,
                                (IEnumerable<SelectListItem>)ViewBag.veterinarios,
                                "(Seleccione el Veterinario)",
                                new { @class = "form-select form-select-lg" })
                            <span asp-validation-for="IdVeterinario" class="text-danger small"></span>
                        </div>

                        <!-- Mascota -->
                        <div class="mb-4">
                            <label asp-for="IdMascota" class="form-label fw-bold">
                                <i class="fas fa-paw me-1 text-success"></i> Mascota
                            </label>
                            @Html.DropDownListFor(model => model.IdMascota,
                                (IEnumerable<SelectListItem>)ViewBag.mascotas,
                                "(Seleccione su Mascota)",
                                new { @class = "form-select form-select-lg" })
                            <span asp-validation-for="IdMascota" class="text-danger small"></span>
                            <small class="text-muted">
                                <a asp-controller="Cliente" asp-action="AgregarMascota" class="text-success">
                                    <i class="fas fa-plus-circle me-1"></i>¿No ves tu mascota? Regístrala aquí
                                </a>
                            </small>
                        </div>

                        <input asp-for="IdPago" type="hidden" />

                        <!-- Información del pago -->
                        <div class="alert alert-info border-0 mb-4">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-receipt text-info me-3 fa-lg"></i>
                                <div>
                                    <strong>Pago registrado:</strong> Su pago ya fue procesado. 
                                    Al confirmar la cita, quedará agendada automáticamente.
                                </div>
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-controller="Cliente" asp-action="listaCitaPorCliente" asp-route-ide_usr="@clienteId" 
                               class="btn btn-outline-secondary btn-lg px-4">
                                <i class="fas fa-times me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-5" id="btnAgendar">
                                <i class="fas fa-calendar-check me-1"></i> Agendar Cita
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- Flatpickr JS -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/es.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Inicializar Flatpickr con fecha y hora
            flatpickr("#fechaHoraCita", {
                locale: "es",
                enableTime: true,
                dateFormat: "Y-m-d\\TH:i",
                altInput: true,
                altFormat: "d \\de F \\de Y - h:i K",
                minDate: "today",
                maxDate: new Date().fp_incr(90), // Máximo 90 días adelante
                minTime: "08:00",
                maxTime: "18:00",
                minuteIncrement: 30,
                disableMobile: false,
                disable: [
                    function(date) {
                        // Deshabilitar domingos (0 = domingo)
                        return date.getDay() === 0;
                    }
                ],
                onChange: function(selectedDates, dateStr, instance) {
                    // Actualizar el campo hidden con el formato correcto
                    document.querySelector('input[name="CalendarioCita"]').value = dateStr;
                }
            });

            // Validación del formulario
            document.getElementById('formCita').addEventListener('submit', function(e) {
                const fecha = document.getElementById('fechaHoraCita').value;
                const consultorio = document.querySelector('select[name="Consultorio"]').value;
                const veterinario = document.querySelector('select[name="IdVeterinario"]').value;
                const mascota = document.querySelector('select[name="IdMascota"]').value;

                if (!fecha || !consultorio || !veterinario || !mascota) {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'warning',
                        title: 'Campos incompletos',
                        text: 'Por favor complete todos los campos requeridos.',
                        confirmButtonColor: '#28a745'
                    });
                    return false;
                }

                const fechaSeleccionada = new Date(fecha);
                const fechaActual = new Date();

                if (fechaSeleccionada < fechaActual) {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'error',
                        title: 'Fecha inválida',
                        text: 'No puede seleccionar una fecha u hora pasada.',
                        confirmButtonColor: '#28a745'
                    });
                    return false;
                }

                // Mostrar loading
                document.getElementById('btnAgendar').innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i> Agendando...';
                document.getElementById('btnAgendar').disabled = true;
            });
        });
    </script>
}

<style>
    .bg-gradient-success {
        background: linear-gradient(135deg, #1e7e34 0%, #28a745 50%, #20c997 100%) !important;
    }

    .icon-circle {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card {
        border-radius: 15px;
        overflow: hidden;
    }

    .form-control, .form-select {
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

    .form-control:focus, .form-select:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
    }

    .form-control-lg, .form-select-lg {
        padding: 0.75rem 1rem;
        font-size: 1rem;
    }

    .btn-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        border: none;
        transition: all 0.3s ease;
    }

    .btn-success:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(40, 167, 69, 0.4);
    }

    .alert-info {
        background-color: #e7f3ff;
    }

    /* Flatpickr custom */
    .flatpickr-calendar {
        border-radius: 10px !important;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15) !important;
    }

    .flatpickr-day.selected {
        background: #28a745 !important;
        border-color: #28a745 !important;
    }

    .flatpickr-time input:hover,
    .flatpickr-time input:focus {
        background: #e8f5e9 !important;
    }
</style>
