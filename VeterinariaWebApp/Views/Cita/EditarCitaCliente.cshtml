@model VeterinariaWebApp.Models.Cita.CitaO

@{
    ViewData["Title"] = "Editar Cita";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
    var clienteId = Context.Session.GetInt32("ClienteId");
}

<!-- Flatpickr CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/themes/material_green.css">

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-edit text-warning me-2"></i> Editar Cita
        </h1>
        <a asp-controller="Cliente" asp-action="listaCitaPorCliente" asp-route-ide_usr="@clienteId" 
           class="btn btn-secondary btn-sm">
            <i class="fas fa-arrow-left me-1"></i> Volver al listado
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow-lg border-0">
                <div class="card-header py-3 bg-gradient-warning text-white">
                    <div class="d-flex align-items-center">
                        <div class="icon-circle bg-white text-warning me-3">
                            <i class="fas fa-calendar-alt fa-lg"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 fw-bold">Editar Cita #@Model.IdCita</h5>
                            <small class="opacity-75">Modifique los datos que desee actualizar</small>
                        </div>
                    </div>
                </div>



                <div class="card-body p-4">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }



                    <form asp-action="EditarCitaClientePost" method="post" id="formEditarCita">
                        <input asp-for="IdCita" type="hidden" />
                        <input asp-for="IdPago" type="hidden" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Fecha y Hora -->
                        <div class="mb-4">
                            <label asp-for="CalendarioCita" class="form-label fw-bold">
                                <i class="fas fa-calendar-alt me-1 text-warning"></i> Fecha y Hora de la Cita
                            </label>
                            <input asp-for="CalendarioCita" type="text" class="form-control form-control-lg" 
                                   id="fechaHoraCita" placeholder="Seleccione fecha y hora" readonly />
                            <span asp-validation-for="CalendarioCita" class="text-danger small"></span>
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                Horario de atención: Lunes a Sábado, 8:00 AM - 6:00 PM.
                                <strong>Cada cita tiene una duración de 30 minutos.</strong>
                                Por favor, seleccione un horario disponible.
                            </small>
                        </div>

                        <!-- Consultorio -->
                        <div class="mb-4">
                            <label asp-for="Consultorio" class="form-label fw-bold">
                                <i class="fas fa-door-open me-1 text-warning"></i> Consultorio
                            </label>
                            <select asp-for="Consultorio" class="form-select form-select-lg">
                                <option value="">Seleccione un consultorio</option>
                                <option value="1" @@(Model.Consultorio == 1 ? "selected" : "")>Consultorio 1 - Medicina General</option>
                                <option value="2" @@(Model.Consultorio == 2 ? "selected" : "")>Consultorio 2 - Cirugía</option>
                                <option value="3" @@(Model.Consultorio == 3 ? "selected" : "")>Consultorio 3 - Vacunación</option>
                                <option value="4" @@(Model.Consultorio == 4 ? "selected" : "")>Consultorio 4 - Emergencias</option>
                                <option value="5" @@(Model.Consultorio == 5 ? "selected" : "")>Consultorio 5 - Dermatología</option>
                            </select>
                            <span asp-validation-for="Consultorio" class="text-danger small"></span>
                        </div>

                        <!-- Veterinario -->
                        <div class="mb-4">
                            <label asp-for="IdVeterinario" class="form-label fw-bold">
                                <i class="fas fa-user-md me-1 text-warning"></i> Veterinario
                            </label>
                            @Html.DropDownListFor(model => model.IdVeterinario,
                                (IEnumerable<SelectListItem>)ViewBag.veterinarios,
                                "(Seleccione el Veterinario)",
                                new { @class = "form-select form-select-lg" })
                            <span asp-validation-for="IdVeterinario" class="text-danger small"></span>
                        </div>

                        <!-- Mascota -->
                        <div class="mb-4">
                            <label asp-for="IdMascota" class="form-label fw-bold">
                                <i class="fas fa-paw me-1 text-warning"></i> Mascota
                            </label>
                            @Html.DropDownListFor(model => model.IdMascota,
                                (IEnumerable<SelectListItem>)ViewBag.mascotas,
                                "(Seleccione su Mascota)",
                                new { @class = "form-select form-select-lg" })
                            <span asp-validation-for="IdMascota" class="text-danger small"></span>
                        </div>

                        <!-- Info -->
                        <div class="alert alert-light border-warning mb-4">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-info-circle text-warning me-2 fa-lg"></i>
                                <div>
                                    <strong>Nota:</strong> Solo puede modificar citas futuras. 
                                    El pago asociado no se verá afectado.
                                </div>
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-controller="Cliente" asp-action="listaCitaPorCliente" asp-route-ide_usr="@clienteId" 
                               class="btn btn-outline-secondary btn-lg px-4">
                                <i class="fas fa-times me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg px-5 text-white" id="btnGuardar">
                                <i class="fas fa-save me-1"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- Flatpickr JS -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/es.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Fecha actual de la cita
            const fechaActualCita = '@Model.CalendarioCita.ToString("yyyy-MM-ddTHH:mm")';

            // Inicializar Flatpickr
            flatpickr("#fechaHoraCita", {
                locale: "es",
                enableTime: true,
                dateFormat: "Y-m-d\\TH:i",
                altInput: true,
                altFormat: "d \\de F \\de Y - h:i K",
                defaultDate: fechaActualCita,
                minDate: "today",
                maxDate: new Date().fp_incr(90),
                minTime: "08:00",
                maxTime: "18:00",
                minuteIncrement: 30,
                disableMobile: false,
                disable: [
                    function(date) {
                        return date.getDay() === 0; // Deshabilitar domingos
                    }
                ]
            });

            // Validación del formulario
            document.getElementById('formEditarCita').addEventListener('submit', function(e) {
                const fecha = document.getElementById('fechaHoraCita').value;
                const consultorio = document.querySelector('select[name="Consultorio"]').value;
                const veterinario = document.querySelector('select[name="IdVeterinario"]').value;
                const mascota = document.querySelector('select[name="IdMascota"]').value;

                if (!fecha || !consultorio || !veterinario || !mascota) {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'warning',
                        title: 'Campos incompletos',
                        text: 'Por favor complete todos los campos requeridos.',
                        confirmButtonColor: '#f39c12'
                    });
                    return false;
                }

                // Mostrar loading
                document.getElementById('btnGuardar').innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i> Guardando...';
                document.getElementById('btnGuardar').disabled = true;
            });
        });
    </script>
}

<style>
    .bg-gradient-warning {
        background: linear-gradient(135deg, #f39c12 0%, #f1c40f 50%, #f9ca24 100%) !important;
    }

    .icon-circle {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card {
        border-radius: 15px;
        overflow: hidden;
    }

    .form-control, .form-select {
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

    .form-control:focus, .form-select:focus {
        border-color: #f39c12;
        box-shadow: 0 0 0 0.2rem rgba(243, 156, 18, 0.25);
    }

    .btn-warning {
        background: linear-gradient(135deg, #f39c12 0%, #f1c40f 100%);
        border: none;
        transition: all 0.3s ease;
    }

    .btn-warning:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(243, 156, 18, 0.4);
    }

    .flatpickr-day.selected {
        background: #f39c12 !important;
        border-color: #f39c12 !important;
    }
</style>
