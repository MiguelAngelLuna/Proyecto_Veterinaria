@model VeterinariaWebApp.Models.Cita.CitaO

@{
    ViewData["Title"] = "Actualizar Cita";
    Layout = "~/Views/Shared/_LayoutRecepcionista.cshtml";
}

<!-- Flatpickr CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/themes/material_green.css">

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
     
        <div class="card shadow-sm border-success">
          
            <div class="card-header bg-success text-white">
              
                <h2 class="card-title mb-0">
                    <i class="fas fa-calendar-edit"></i> Actualizar Cita
                </h2>
            </div>

            <div class="card-body">
                <form asp-action="actualizarCitaPost">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input asp-for="IdCita" hidden />
                    <input asp-for="IdPago" hidden />

                    <!-- Fecha y Hora  -->
                    <div class="mb-3">
                        <label asp-for="CalendarioCita" class="form-label fw-bold">
                            <i class="fas fa-calendar-alt me-1 text-success"></i>@Html.DisplayNameFor(m => m.CalendarioCita)
                        </label>
                        <!-- Cambio 1: Valor inicial correcto -->
                        <input asp-for="CalendarioCita" type="text" class="form-control form-control-lg"
                               id="fechaHoraCita" placeholder="Seleccione fecha y hora" readonly
                               value="@Model.CalendarioCita.ToString("yyyy-MM-ddTHH:mm")" />
                        <span asp-validation-for="CalendarioCita" class="text-danger small"></span>
                        <small class="text-muted">
                            <i class="fas fa-info-circle me-1"></i>Horario de atención: Lunes a Sábado, 8:00 AM - 6:00 PM
                        </small>
                    </div>

                  
                    <div class="mb-3">
                        <label asp-for="Consultorio" class="form-label fw-bold">
                            <i class="fas fa-door-open me-1 text-success"></i>@Html.DisplayNameFor(m => m.Consultorio)
                        </label>
                        <select asp-for="Consultorio" class="form-select form-select-lg">
                            <option value="">Seleccione un consultorio</option>
                            <option value="1">Consultorio 1 - Medicina General</option>
                            <option value="2">Consultorio 2 - Cirugía</option>
                            <option value="3">Consultorio 3 - Vacunación</option>
                            <option value="4">Consultorio 4 - Emergencias</option>
                            <option value="5">Consultorio 5 - Dermatología</option>
                        </select>
                        <span asp-validation-for="Consultorio" class="text-danger small"></span>
                    </div>

                    <!-- Veterinario -->
                    <div class="mb-3">
                        <label asp-for="IdVeterinario" class="form-label fw-bold">
                            <i class="fas fa-user-md me-1 text-success"></i>Veterinario
                        </label>
                        @Html.DropDownListFor(model => model.IdVeterinario,
                        (IEnumerable<SelectListItem>)ViewBag.veterinarios,
                                                "(Seleccione el Veterinario)",
                                                new { @class = "form-select form-select-lg" })
                        <span asp-validation-for="IdVeterinario" class="text-danger small"></span>
                    </div>

                    <!-- Mascota -->
                    <div class="mb-4">
                        <label asp-for="IdMascota" class="form-label fw-bold">
                            <i class="fas fa-paw me-1 text-success"></i>Mascota
                        </label>
                        @Html.DropDownListFor(model => model.IdMascota,
                                                (IEnumerable<SelectListItem>)ViewBag.mascotas,
                                                "(Seleccione la Mascota)",
                                                new { @class = "form-select form-select-lg" })
                        <span asp-validation-for="IdMascota" class="text-danger small"></span>
                    </div>

                    <!-- Botones -->
                    <div class="d-flex justify-content-start gap-3">
                        <!-- Cambio 3: Aumentado el 'gap' de 2 a 3 -->
                        <button type="submit" class="btn btn-warning btn-lg px-4">
                            <i class="fas fa-sync-alt me-1"></i> Actualizar
                        </button>
                        <a asp-controller="Cita" asp-action="CitasPendientes" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Regresar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- Flatpickr JS -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/es.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Inicializar Flatpickr con fecha y hora
            flatpickr("#fechaHoraCita", {
                locale: "es",
                enableTime: true,
                dateFormat: "Y-m-d\\TH:i",
                altInput: true,
                altFormat: "d \\de F \\de Y - h:i K",
                minDate: "today",
                maxDate: new Date().fp_incr(90), // Máximo 90 días adelante
                minTime: "08:00",
                maxTime: "18:00",
                minuteIncrement: 30,
                disableMobile: false,
                disable: [
                    function(date) {
                        // Deshabilitar domingos (0 = domingo)
                        return date.getDay() === 0;
                    }
                ],
                onChange: function(selectedDates, dateStr, instance) {
                  
                    document.querySelector('input[name="CalendarioCita"]').value = dateStr;
                }
            });

            // Validación del formulario
            document.getElementById('formCita').addEventListener('submit', function(e) {
                const fecha = document.getElementById('fechaHoraCita').value;
                const consultorio = document.querySelector('select[name="Consultorio"]').value;
                const veterinario = document.querySelector('select[name="IdVeterinario"]').value;
                const mascota = document.querySelector('select[name="IdMascota"]').value;

                if (!fecha || !consultorio || !veterinario || !mascota) {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'warning',
                        title: 'Campos incompletos',
                        text: 'Por favor complete todos los campos requeridos.',
                        confirmButtonColor: '#28a745'
                    });
                    return false;
                }

                const fechaSeleccionada = new Date(fecha);
                const fechaActual = new Date();

                if (fechaSeleccionada < fechaActual) {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'error',
                        title: 'Fecha inválida',
                        text: 'No puede seleccionar una fecha u hora pasada.',
                        confirmButtonColor: '#28a745'
                    });
                    return false;
                }

                // Mostrar loading
                document.querySelector('.btn-warning').innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i> Actualizando...';
                document.querySelector('.btn-warning').disabled = true;
            });
        });
    </script>
}

<style>
  
    .bg-gradient-success {
        background: linear-gradient(135deg, #1e7e34 0%, #28a745 50%, #20c997 100%) !important;
    }

    .icon-circle {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card {
        border-radius: 15px;
        overflow: hidden;
    }

    .form-control, .form-select {
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .form-control:focus, .form-select:focus {
            border-color: #28a745;
            box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
        }

    .form-control-lg, .form-select-lg {
        padding: 0.75rem 1rem;
        font-size: 1rem;
    }

    .btn-warning {
        background: linear-gradient(135deg, #ffc107 0%, #ffb300 100%);
        border: none;
        color: #212529;
        transition: all 0.3s ease;
    }

        .btn-warning:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 193, 7, 0.4);
        }

    .btn-secondary {
        background: #f0f0f0;
        border: 1px solid #ccc;
        color: #555;
        transition: all 0.3s ease;
    }

        .btn-secondary:hover {
            background: #e9ecef;
            color: #333;
            transform: translateY(-2px);
        }

    
    .flatpickr-calendar {
        border-radius: 10px !important;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15) !important;
    }

    .flatpickr-day.selected {
        background: #28a745 !important;
        border-color: #28a745 !important;
    }

    .flatpickr-time input:hover,
    .flatpickr-time input:focus {
        background: #e8f5e9 !important;
    }
</style>