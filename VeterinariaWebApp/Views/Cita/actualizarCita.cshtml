@model VeterinariaWebApp.Models.Cita.CitaO

@{
    ViewData["Title"] = "Actualizar Cita";
    Layout = "~/Views/Shared/_LayoutRecepcionista.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-primary">
            <div class="card-header bg-primary text-white">
                <h2 class="card-title mb-0">
                    <i class="fas fa-calendar-edit"></i> Actualizar Cita
                </h2>
            </div>

            <div class="card-body">
                <form asp-action="actualizarCitaPost">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input asp-for="IdCita" hidden />
                    <input asp-for="IdPago" hidden />

                    <div class="mb-3">
                        <label asp-for="CalendarioCita" class="form-label fw-bold">
                            <i class="fas fa-calendar-alt"></i>@Html.DisplayNameFor(m => m.CalendarioCita)
                        </label>
                        <input asp-for="CalendarioCita" class="form-control" type="datetime-local" />
                        <span asp-validation-for="CalendarioCita" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Consultorio" class="form-label fw-bold">
                            <i class="fas fa-door-open"></i>@Html.DisplayNameFor(m => m.Consultorio)
                        </label>
                        <input asp-for="Consultorio" class="form-control" />
                        <span asp-validation-for="Consultorio" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="IdVeterinario" class="form-label fw-bold">
                            <i class="fas fa-user-md"></i>Veterinario
                        </label>
                        @Html.DropDownListFor(model => model.IdVeterinario,
                                 (IEnumerable<SelectListItem>)ViewBag.veterinarios,
                                 "(Seleccione el Veterinario)",
                                 new { @class = "form-select" })
                        <span asp-validation-for="IdVeterinario" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="IdMascota" class="form-label fw-bold">
                            <i class="fas fa-paw"></i>Mascota
                        </label>
                        @Html.DropDownListFor(model => model.IdMascota,
                                 (IEnumerable<SelectListItem>)ViewBag.mascotas,
                                 "(Seleccione la Mascota)",
                                 new { @class = "form-select" })
                        <span asp-validation-for="IdMascota" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-start gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-sync-alt"></i> Actualizar
                        </button>
                        <a asp-action="ListadoCitas" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Regresar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(rgba(0, 0, 0, 0.45), rgba(0, 0, 0, 0.45)), url('/images/fondo-veterinaria.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Poppins', sans-serif;
        color: #333;
    }

    .container, .row {
        margin-top: 50px;
    }

    .card {
        background: rgba(255, 255, 255, 0.96);
        border: none;
        border-radius: 16px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        overflow: hidden;
        backdrop-filter: blur(6px);
        border-top: 6px solid #28a745;
    }

    .card-header {
        background: linear-gradient(90deg, #28a745, #00c97b, #28a745);
        background-size: 200% 100%;
        animation: moveGradient 5s infinite linear;
        color: white;
        padding: 1.5rem;
        font-size: 1.3rem;
        letter-spacing: 0.5px;
        border-bottom: none;
    }

        .card-header h2 {
            font-weight: 600;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 15px;
        }

    .card-body {
        padding: 2rem;
    }

    .form-label {
        color: #1b6b3f;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 6px;
    }

        .form-label i {
            color: #1b6b3f;
            font-size: 1.1rem;
        }

    .form-control,
    .form-select {
        border-radius: 10px;
        border: 1px solid #ccc;
        padding: 10px 15px;
        transition: all 0.3s ease;
        font-size: 0.95rem;
    }

        .form-control:focus,
        .form-select:focus {
            border-color: #28a745;
            box-shadow: 0 0 8px rgba(40, 167, 69, 0.3);
            background-color: #fff;
        }

    .btn {
        font-weight: 600;
        border-radius: 10px;
        transition: all 0.3s ease;
        font-size: 0.95rem;
        padding: 0.8rem 1.5rem;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .btn-warning {
        background: linear-gradient(135deg, #ffc107, #ffb300);
        border: none;
        color: #212529;
        box-shadow: 0 4px 12px rgba(255, 193, 7, 0.3);
    }

        .btn-warning:hover {
            background: linear-gradient(135deg, #e0a800, #ffca2c);
            box-shadow: 0 0 15px rgba(255, 193, 7, 0.5);
            transform: translateY(-2px);
        }

    .btn-secondary {
        background: #f0f0f0;
        border: 1px solid #ccc;
        color: #555;
    }

        .btn-secondary:hover {
            background: #e9ecef;
            color: #333;
            transform: translateY(-2px);
        }

    @@keyframes moveGradient {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }
</style>