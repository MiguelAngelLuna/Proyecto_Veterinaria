@model VeterinariaWebApp.Models.Cita.Cita

@{
    ViewData["Title"] = "Detalle de Cita";
    var veterinarioId = Context.Session.GetInt32("MedicoId");
    var clienteId = Context.Session.GetInt32("PacienteId");

    if (clienteId != null && clienteId != 0)
    {
        Layout = "~/Views/Shared/_LayoutCliente.cshtml";
    }
    else if (veterinarioId != null && veterinarioId != 0)
    {
        Layout = "~/Views/Shared/_LayoutVeterinario.cshtml";
    }
}

<div class="container mt-4">
    <div class="card shadow-sm border-success">
        <div class="card-header bg-success text-white">
            <h2 class="card-title mb-0">
                <i class="fas fa-calendar-check" style="margin-right: 15px;"></i>Detalle de la Cita Veterinaria
            </h2>
        </div>
        <div class="card-body">
            <h4 class="text-success mb-4"><i class="fas fa-info-circle" style="margin-right: 15px;"></i>Información de la Cita</h4>

            <div class="row mb-3 align-items-center">
                <div class="col-md-3 fw-bold text-success d-flex align-items-center">
                    <i class="fas fa-id-card me-3" style="width: 25px; font-size: 1.1rem;"></i>
                    @Html.DisplayNameFor(model => model.IdCita)
                </div>
                <div class="col-md-9">
                    <span class="badge bg-success text-white px-3 py-2">@Html.DisplayFor(model => model.IdCita)</span>
                </div>
            </div>

            <div class="row mb-3 align-items-center">
                <div class="col-md-3 fw-bold text-success d-flex align-items-center">
                    <i class="far fa-calendar-alt me-3" style="width: 25px; font-size: 1.1rem;"></i>
                    @Html.DisplayNameFor(model => model.CalendarioCita)
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.CalendarioCita)
                </div>
            </div>

            <div class="row mb-3 align-items-center">
                <div class="col-md-3 fw-bold text-success d-flex align-items-center">
                    <i class="fas fa-door-open me-3" style="width: 25px; font-size: 1.1rem;"></i>
                    @Html.DisplayNameFor(model => model.Consultorio)
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.Consultorio)
                </div>
            </div>

            <div class="row mb-3 align-items-center">
                <div class="col-md-3 fw-bold text-success d-flex align-items-center">
                    <i class="fas fa-user-md me-3" style="width: 25px; font-size: 1.1rem;"></i>
                    @Html.DisplayNameFor(model => model.NombreVeterinario)
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.NombreVeterinario)
                </div>
            </div>

            <div class="row mb-3 align-items-center">
                <div class="col-md-3 fw-bold text-success d-flex align-items-center">
                    <i class="fas fa-paw me-3" style="width: 25px; font-size: 1.1rem;"></i>
                    @Html.DisplayNameFor(model => model.NombreMascota)
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.NombreMascota)
                </div>
            </div>

            <div class="row mb-3 align-items-center">
                <div class="col-md-3 fw-bold text-success d-flex align-items-center">
                    <i class="fas fa-money-bill-wave me-3" style="width: 25px; font-size: 1.1rem;"></i>
                    @Html.DisplayNameFor(model => model.MontoPago)
                </div>
                <div class="col-md-9">
                    S/ @Html.DisplayFor(model => model.MontoPago)
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-start mt-4">
        <div class="btn-group" style="gap: 15px;">
            @{
                if (clienteId != null && clienteId != 0)
                {
                    <a asp-controller="Cliente" asp-action="listaCitaPorCliente" asp-route-ide_usr="@clienteId"
                       class="btn btn-outline-success px-4">
                        <i class="fas fa-arrow-left me-2"></i> Regresar
                    </a>
                }
                else if (veterinarioId != null && veterinarioId != 0)
                {
                    <a asp-controller="Veterinario" asp-action="listaCitaPorVeterinarios" asp-route-ide_usr="@veterinarioId"
                       class="btn btn-outline-success px-4">
                        <i class="fas fa-arrow-left me-2"></i> Regresar
                    </a>
                }
            }

            <a asp-action="GenerarDetalleCitaPDF" asp-route-id="@Model.IdCita" class="btn btn-danger px-4">
                <i class="fas fa-file-pdf me-2"></i> Exportar PDF
            </a>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(rgba(0, 80, 0, 0.45), rgba(0, 80, 0, 0.45)), url('/images/fondo-veterinaria.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Poppins', sans-serif;
        color: #333;
    }

    .container {
        max-width: 950px;
        margin: 60px auto;
    }

    .card {
        background: rgba(255, 255, 255, 0.96);
        border: none;
        border-radius: 16px;
        box-shadow: 0 8px 25px rgba(0, 100, 0, 0.25);
        overflow: hidden;
        backdrop-filter: blur(6px);
    }

    .card-header {
        background: linear-gradient(135deg, #2e8b57, #3cb371);
        color: white;
        padding: 1.5rem;
        font-size: 1.3rem;
        display: flex;
        align-items: center;
        gap: 10px;
        border: none;
    }

        .card-header h2 {
            font-weight: 600;
            margin: 0;
            font-size: 1.5rem;
        }

    .card-body {
        padding: 2rem;
    }

    h4 {
        font-weight: 600;
        color: #2e8b57;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .row {
        display: grid;
        grid-template-columns: 35% 65%;
        align-items: center;
        padding: 1rem 1.5rem;
        border-bottom: 1px solid #e4e4e4;
        transition: background 0.3s ease;
    }

        .row:last-child {
            border-bottom: none;
        }

        .row:hover {
            background: rgba(46, 139, 87, 0.07);
        }

    .col-md-3 {
        font-weight: 600;
        color: #2e8b57;
        font-size: 1rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .col-md-9 {
        font-size: 1rem;
        color: #222;
        font-weight: 500;
    }

    .badge {
        background: #2e8b57 !important;
        color: white !important;
        font-weight: 600;
        font-size: 1rem;
        padding: 0.4rem 0.8rem !important;
        border-radius: 8px !important;
    }

    .btn-group {
        gap: 15px;
        margin-top: 40px;
    }

        .btn-group .btn {
            font-weight: 500;
            border-radius: 10px;
            transition: all 0.3s ease;
            font-size: 0.95rem;
            padding: 0.8rem 1.8rem;
        }

    .btn-danger {
        background: linear-gradient(135deg, #b71c1c, #e53935);
        border: none;
        color: white;
        padding: 1rem 2.5rem;
        font-size: 1rem;
        box-shadow: 0 4px 12px rgba(200, 0, 0, 0.3);
        margin-top: 15px; 
    }

        .btn-danger:hover {
            background: linear-gradient(135deg, #a31515, #ff5252);
            box-shadow: 0 0 15px rgba(255, 82, 82, 0.6);
            transform: translateY(-2px);
        }

</style>
