@{
    var clienteId = Context.Session.GetInt32("ClienteId");
    var nombreCliente = Context.Session.GetString("NombreCliente") ?? "Cliente";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="MiVet Online - Sistema de Gestión Veterinaria" />
    <meta name="author" content="MiVet" />

    <title>MiVet Online - Cliente</title>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bodymovin/5.12.2/lottie.min.js"></script>

    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet" />

    <link href="~/css/sb-admin-2.min.css" rel="stylesheet" />
    <link href="~/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
</head>

<body id="page-top">
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="@Url.Action("Index", "Cliente")">
                <div class="sidebar-brand-icon">
                    <i class="fas fa-paw"></i>
                </div>
                <div class="sidebar-brand-text mx-3">MI VET ONLINE</div>
            </a>

            <hr class="sidebar-divider my-0" />

            <li class="nav-item active">
                <a class="nav-link" href="@Url.Action("Index", "Cliente")">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>

            <hr class="sidebar-divider" />

            <div class="sidebar-heading">Gestión de Citas:</div>

            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("listaCitaPorCliente", "Cliente", new { ide_usr = clienteId })">
                    <i class="fas fa-fw fa-calendar-check"></i>
                    <span>Mis Citas</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("listaMascotasPorCliente", "Cliente", new { ide_usr = clienteId })">
                    <i class="fas fa-fw fa-dog"></i>
                    <span>Mis Mascotas</span>
                </a>
            </li>

            <hr class="sidebar-divider" />

            <div class="sidebar-heading">Gestión de Pagos:</div>

            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("PagosCliente", "Pago")">
                    <i class="fas fa-fw fa-credit-card"></i>
                    <span>Mis Pagos</span>
                </a>
            </li>

            <hr class="sidebar-divider" />

            <div class="sidebar-heading">Mi Cuenta:</div>

            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Perfil", "Cliente")">
                    <i class="fas fa-fw fa-user-cog"></i>
                    <span>Mi Perfil</span>
                </a>
            </li>

            <hr class="sidebar-divider d-none d-md-block" />

            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>
        </ul>
        <!-- End Sidebar -->

        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <ul class="navbar-nav ml-auto">
                        <!-- Saludo personalizado -->
                        <li class="nav-item d-none d-sm-flex align-items-center mr-3">
                            <span class="text-gray-600 small">
                                <i class="fas fa-hand-sparkles mr-1"></i>¡Hola, <strong>@nombreCliente</strong>!
                            </span>
                        </li>

                        <div class="topbar-divider d-none d-sm-block"></div>

                        <!-- User Dropdown -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          
                                <img class="img-profile rounded-circle" src="~/img/undraw_profile.svg">
                            </a>
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="@Url.Action("Perfil", "Cliente")">
                                    <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Mi Perfil
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Cerrar sesión
                                </a>
                            </div>
                        </li>
                    </ul>
                </nav>
                <!-- End Topbar -->

                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>

            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        MiVet Online &copy; <span id="year"></span>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal -->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">
                        <i class="fas fa-sign-out-alt mr-2"></i>¿Estás seguro de que quieres salir?
                    </h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    Haz clic en "Cerrar sesión" si deseas finalizar tu sesión y salir.
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
                    <a class="btn btn-danger" href="@Url.Action("CerrarSesion", "Cliente")">
                        <i class="fas fa-sign-out-alt mr-1"></i>Cerrar sesión
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script>
        const currentYear = new Date().getFullYear();
        document.getElementById('year').textContent = currentYear;
    </script>

    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/js/sb-admin-2.min.js"></script>
    <script src="~/vendor/chart.js/Chart.min.js"></script>
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/demo/chart-area-demo.js"></script>
    <script src="~/js/demo/chart-pie-demo.js"></script>
    <script src="~/js/demo/datatables-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>


<style>
    body {
        background-color: #c8f5d2;
        color: #0b3d20;
    }

    .bg-gradient-primary {
        background: linear-gradient(180deg, #1e7e34 0%, #28a745 60%, #3bc45b 100%) !important;
        box-shadow: 0 0 15px rgba(40, 167, 69, 0.5);
    }

    .sidebar-dark .nav-link {
        color: #e8ffe8 !important;
        transition: all 0.3s ease;
    }

        .sidebar-dark .nav-link:hover {
            color: #ffffff !important;
            background-color: rgba(56, 192, 75, 0.3) !important;
            transform: scale(1.03);
        }

    .sidebar-dark .nav-item.active .nav-link {
        background-color: #1e7e34 !important;
        color: #fff !important;
        box-shadow: inset 0 0 8px rgba(255, 255, 255, 0.2);
    }

    .sidebar .nav-link i {
        color: #a7f5b8 !important;
        transition: all 0.3s ease;
    }

    .sidebar .nav-link:hover i {
        color: #ffffff !important;
        transform: scale(1.2);
    }

    .sidebar-brand-text {
        color: #ffffff !important;
        font-weight: 700;
        letter-spacing: 0.5px;
    }

    .sidebar-brand-icon .fas {
        color: #a7f5b8 !important;
        font-size: 1.8rem;
        transition: transform 0.3s ease, color 0.3s ease;
    }

    .sidebar-brand-icon:hover .fas {
        transform: rotate(20deg) scale(1.2);
        color: #ffffff !important;
    }

    .sidebar-divider {
        border-top: 1px solid rgba(255, 255, 255, 0.2) !important;
    }

    .navbar-light.bg-white {
        background-color: #e8f8ec !important;
        box-shadow: 0 2px 6px rgba(40, 167, 69, 0.2);
    }

    .topbar .nav-link span.text-gray-600 {
        color: #0b3d20 !important;
        font-weight: 600;
    }

    .sticky-footer {
        background-color: #eaf8ed !important;
        color: #155724;
        font-weight: 600;
    }

    .btn-primary {
        background-color: #1e7e34 !important;
        border-color: #1e7e34 !important;
        box-shadow: 0 2px 6px rgba(30, 126, 52, 0.4);
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #28a745 !important;
            transform: translateY(-2px);
        }

    .btn-secondary {
        background-color: #6fdc8f !important;
        border-color: #6fdc8f !important;
        color: #0b3d20;
        font-weight: 500;
    }

        .btn-secondary:hover {
            background-color: #4fcf74 !important;
            color: #fff !important;
        }

    .btn-danger {
        background-color: #c63f3f !important;
        border: none;
    }

    .modal-content {
        background-color: #f4fff6 !important;
        color: #0b3d20;
        border: 2px solid #a7f5b8;
        border-radius: 10px;
    }

    .scroll-to-top {
        background-color: #28a745 !important;
        box-shadow: 0 2px 6px rgba(40, 167, 69, 0.4);
    }

        .scroll-to-top:hover {
            background-color: #1e7e34 !important;
        }

    a, .nav-link span {
        transition: all 0.3s ease;
    }

        a:hover, .nav-link:hover span {
            color: #ffffff !important;
            text-shadow: 0 0 6px rgba(255, 255, 255, 0.4);
        }

    /* Dropdown styles */
    .dropdown-item {
        transition: all 0.2s ease;
    }

        .dropdown-item:hover {
            background-color: #e8f5e9 !important;
            color: #155724 !important;
        }

        .dropdown-item i {
            color: #28a745 !important;
        }

    /* Saludo personalizado */
    .navbar-nav .text-gray-600 strong {
        color: #155724 !important;
    }
</style>
