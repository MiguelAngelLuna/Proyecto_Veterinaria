@model MivetOnline.Models.Usuario.CitaCliente

@{
    ViewData["Title"] = "Cancelar Cita";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-times-circle text-danger"></i> Cancelar Cita
    </h1>
    <a href="@Url.Action("MisCitas", "Cliente")" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
        <i class="fas fa-arrow-left fa-sm text-white-50"></i> Volver
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow mb-4 border-danger">
            <div class="card-header py-3 bg-danger text-white">
                <h6 class="m-0 font-weight-bold">
                    <i class="fas fa-exclamation-triangle"></i> Confirmar Cancelación
                </h6>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>¡Atención!</strong> Estás a punto de cancelar esta cita.
                </div>

                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="text-center mb-3">
                            <i class="fas fa-calendar-alt fa-2x text-danger mb-2"></i><br>
                            Cita #@Model.ide_cit
                        </h5>
                        <hr>
                        <p class="mb-2">
                            <strong><i class="fas fa-calendar text-danger"></i> Fecha:</strong> @Model.cal_cit.ToString("dd/MM/yyyy HH:mm")
                        </p>
                        <p class="mb-2">
                            <strong><i class="fas fa-door-open text-danger"></i> Consultorio:</strong> @Model.con_cit
                        </p>
                        <p class="mb-2">
                            <strong><i class="fas fa-user-md text-danger"></i> Veterinario:</strong> @Model.veterinario
                        </p>
                        <p class="mb-2">
                            <strong><i class="fas fa-dog text-danger"></i> Mascota:</strong> @Model.mascota
                        </p>
                        <p class="mb-2">
                            <strong><i class="fas fa-paw text-danger"></i> Especie:</strong> @Model.especie
                        </p>
                        <p class="mb-0">
                            <strong><i class="fas fa-money-bill-wave text-danger"></i> Monto:</strong> S/ @Model.mon_pag.ToString("N2")
                        </p>
                    </div>
                </div>

                <div class="alert alert-danger">
                    <ul class="mb-0">
                        <li>Esta acción no se puede deshacer</li>
                        <li>El pago realizado no será reembolsado</li>
                        <li>Deberás agendar una nueva cita si lo deseas</li>
                    </ul>
                </div>

                <form asp-controller="Cita" asp-action="ConfirmarCancelacion" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.ide_cit" />

                    <div class="row">
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-danger btn-block">
                                <i class="fas fa-times-circle"></i> Sí, Cancelar Cita
                            </button>
                        </div>
                        <div class="col-md-6">
                            <a href="@Url.Action("MisCitas", "Cliente")" class="btn btn-secondary btn-block">
                                <i class="fas fa-arrow-left"></i> No, Mantener Cita
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
