@model MivetOnline.Models.Mascota.MascotaO

@{
    ViewData["Title"] = "Editar Mascota";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-edit text-warning"></i> Editar Mascota
    </h1>
    <a href="@Url.Action("Index", "Mascota")" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
        <i class="fas fa-arrow-left fa-sm text-white-50"></i> Volver
    </a>
</div>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> @ViewBag.Error
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow mb-4 border-warning">
            <div class="card-header py-3 bg-warning">
                <h6 class="m-0 font-weight-bold text-white">
                    <i class="fas fa-paw"></i> Actualizar Datos de la Mascota
                </h6>
            </div>
            <div class="card-body">
                <form asp-controller="Mascota" asp-action="Actualizar" method="post">
                    @Html.AntiForgeryToken()

                    <input asp-for="ide_mas" type="hidden" />

                    <div class="form-group mb-3">
                        <label asp-for="nom_mas" class="form-label font-weight-bold">
                            <i class="fas fa-tag text-warning"></i> Nombre de la Mascota
                        </label>
                        <input asp-for="nom_mas" type="text" class="form-control" required />
                        <span asp-validation-for="nom_mas" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="esp_mas" class="form-label font-weight-bold">
                            <i class="fas fa-paw text-warning"></i> Especie
                        </label>
                        <select asp-for="esp_mas" class="form-control" required>
                            <option value="">Seleccione una especie...</option>
                            <option value="Perro">üêï Perro</option>
                            <option value="Gato">üêà Gato</option>
                            <option value="Conejo">üêá Conejo</option>
                            <option value="Ave">üê¶ Ave</option>
                            <option value="Hamster">üêπ Hamster</option>
                            <option value="Pez">üê† Pez</option>
                            <option value="Otro">ü¶é Otro</option>
                        </select>
                        <span asp-validation-for="esp_mas" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="raz_mas" class="form-label font-weight-bold">
                            <i class="fas fa-dna text-warning"></i> Raza (Opcional)
                        </label>
                        <input asp-for="raz_mas" type="text" class="form-control" />
                        <span asp-validation-for="raz_mas" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="fna_mas" class="form-label font-weight-bold">
                            <i class="fas fa-calendar-alt text-warning"></i> Fecha de Nacimiento
                        </label>
                        <input asp-for="fna_mas" type="date" class="form-control" required />
                        <span asp-validation-for="fna_mas" class="text-danger"></span>
                    </div>

                    <hr class="my-4">

                    <div class="row">
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-warning btn-block">
                                <i class="fas fa-save"></i> Guardar Cambios
                            </button>
                        </div>
                        <div class="col-md-6">
                            <a href="@Url.Action("Index", "Mascota")" class="btn btn-secondary btn-block">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}