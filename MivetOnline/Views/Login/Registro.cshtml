@model MivetOnline.Models.Usuario.UsuarioO

@{
    ViewData["Title"] = "Registro - MiVet Online";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="registro-container">
    <div class="registro-card p-4 shadow-lg">
        <div class="text-center mb-4">
            <img src="~/img/veterinaria.png" alt="MiVet Logo" style="width: 80px;" onerror="this.style.display='none'">
            <h3 class="fw-bold text-primary mt-2">Crear Cuenta</h3>
            <p class="text-muted">Regístrate en MiVet Online</p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">
                <i class="fas fa-exclamation-circle"></i> @ViewBag.Error
            </div>
        }

        <form asp-controller="Login" asp-action="Registrar" method="post">
            @Html.AntiForgeryToken()

            <div class="form-floating mb-3">
                <input asp-for="cor_usr" type="email" class="form-control custom-input" placeholder="correo@ejemplo.com" required>
                <label asp-for="cor_usr"><i class="fas fa-envelope me-2"></i>Correo electrónico</label>
                <span asp-validation-for="cor_usr" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="pwd_usr" type="password" class="form-control custom-input" placeholder="********" required>
                <label asp-for="pwd_usr"><i class="fas fa-lock me-2"></i>Contraseña</label>
                <span asp-validation-for="pwd_usr" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="nom_usr" type="text" class="form-control custom-input" placeholder="Nombre" required>
                        <label asp-for="nom_usr"><i class="fas fa-user me-2"></i>Nombre</label>
                        <span asp-validation-for="nom_usr" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="ape_usr" type="text" class="form-control custom-input" placeholder="Apellido" required>
                        <label asp-for="ape_usr"><i class="fas fa-user me-2"></i>Apellido</label>
                        <span asp-validation-for="ape_usr" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="fna_usr" type="date" class="form-control custom-input" required>
                <label asp-for="fna_usr"><i class="fas fa-calendar me-2"></i>Fecha de Nacimiento</label>
                <span asp-validation-for="fna_usr" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="ide_doc" class="form-select custom-input" required>
                    <option value="">Seleccione...</option>
                    @if (ViewBag.Documentos != null)
                    {
                        @foreach (var doc in ViewBag.Documentos)
                        {
                            <option value="@doc.ide_doc">@doc.nom_doc</option>
                        }
                    }
                </select>
                <label asp-for="ide_doc"><i class="fas fa-id-card me-2"></i>Tipo de Documento</label>
                <span asp-validation-for="ide_doc" class="text-danger"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="num_doc" type="text" class="form-control custom-input" placeholder="12345678" required>
                <label asp-for="num_doc"><i class="fas fa-hashtag me-2"></i>Número de Documento</label>
                <span asp-validation-for="num_doc" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-registro w-100 py-2">
                <i class="fas fa-user-plus me-2"></i>Registrarse
            </button>
        </form>

        <div class="text-center mt-3">
            <p class="text-muted">
                ¿Ya tienes cuenta?
                <a href="@Url.Action("Index", "Login")" class="text-primary fw-bold">Inicia sesión aquí</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        margin: 0;
        padding: 0;
    }

    .registro-container {
        background-color: #d4edda;
        min-height: 100vh;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Segoe UI', sans-serif;
        padding: 40px 20px;
    }

    .registro-card {
        background: rgba(230, 244, 234, 0.95);
        backdrop-filter: blur(12px);
        border-radius: 18px;
        width: 100%;
        max-width: 550px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.25);
        animation: fadeInUp 0.8s ease;
    }

        .registro-card h3.fw-bold {
            color: #155724;
        }

        .registro-card p {
            color: #155724cc;
        }

        .registro-card .fas {
            color: #28a745;
        }

    .custom-input, .form-select {
        border: 2px solid #85c997;
        border-radius: 10px;
        transition: all 0.3s ease;
        background-color: #f0f9f0;
        color: #155724;
    }

        .custom-input:focus, .form-select:focus {
            border-color: #28a745;
            box-shadow: 0 0 8px rgba(40, 167, 69, 0.4);
            background-color: #fff;
            color: #155724;
        }

    .btn-registro {
        background: linear-gradient(90deg, #28a745, #85c997, #28a745);
        background-size: 300% 100%;
        border: none;
        color: white;
        border-radius: 10px;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.4s ease;
        animation: gradientMove 4s linear infinite;
    }

        .btn-registro:hover {
            transform: scale(1.03);
            box-shadow: 0 0 12px rgba(40, 167, 69, 0.5);
        }

    @@keyframes gradientMove {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .alert-danger {
        background-color: #ffcdd2;
        color: #842029;
        border: 1px solid #f5c6cb;
        border-radius: 8px;
    }

    .form-floating label {
        color: #155724;
    }

    .text-primary {
        color: #28a745 !important;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .text-primary:hover {
            color: #1e7e34 !important;
            text-decoration: underline;
        }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }
</style>