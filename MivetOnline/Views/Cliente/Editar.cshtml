@model MivetOnline.Models.Usuario.ClienteO

@{
    ViewData["Title"] = "Editar Perfil";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-user-edit text-primary"></i> Editar Mi Perfil
    </h1>
    <a href="@Url.Action("MiPerfil", "Cliente")" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
        <i class="fas fa-arrow-left fa-sm text-white-50"></i> Volver
    </a>
</div>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> @ViewBag.Error
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-edit"></i> Formulario de Edición
                </h6>
            </div>
            <div class="card-body">
                <form asp-controller="Cliente" asp-action="Actualizar" method="post">
                    @Html.AntiForgeryToken()

                    <input asp-for="ide_cli" type="hidden" />
                    <input asp-for="ide_usr" type="hidden" />
                    <input asp-for="ide_rol" type="hidden" />

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="cor_usr" class="form-label font-weight-bold">
                                <i class="fas fa-envelope text-primary"></i> Correo Electrónico
                            </label>
                            <input asp-for="cor_usr" type="email" class="form-control" placeholder="correo@ejemplo.com" required />
                            <span asp-validation-for="cor_usr" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="pwd_usr" class="form-label font-weight-bold">
                                <i class="fas fa-lock text-primary"></i> Contraseña
                            </label>
                            <input asp-for="pwd_usr" type="password" class="form-control" placeholder="Mínimo 8 caracteres" required />
                            <span asp-validation-for="pwd_usr" class="text-danger"></span>
                            <small class="form-text text-muted">Deja la contraseña actual o ingresa una nueva</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="nom_usr" class="form-label font-weight-bold">
                                <i class="fas fa-user text-primary"></i> Nombre
                            </label>
                            <input asp-for="nom_usr" type="text" class="form-control" placeholder="Tu nombre" required />
                            <span asp-validation-for="nom_usr" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ape_usr" class="form-label font-weight-bold">
                                <i class="fas fa-user text-primary"></i> Apellido
                            </label>
                            <input asp-for="ape_usr" type="text" class="form-control" placeholder="Tu apellido" required />
                            <span asp-validation-for="ape_usr" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="fna_usr" class="form-label font-weight-bold">
                                <i class="fas fa-calendar text-primary"></i> Fecha de Nacimiento
                            </label>
                            <input asp-for="fna_usr" type="date" class="form-control" required />
                            <span asp-validation-for="fna_usr" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ide_doc" class="form-label font-weight-bold">
                                <i class="fas fa-id-card text-primary"></i> Tipo de Documento
                            </label>
                            <select asp-for="ide_doc" class="form-control" required>
                                <option value="">Seleccione...</option>
                                @if (ViewBag.Documentos != null)
                                {
                                    @foreach (var doc in ViewBag.Documentos)
                                    {
                                        <option value="@doc.ide_doc">@doc.nom_doc</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="ide_doc" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-4">
                            <label asp-for="num_doc" class="form-label font-weight-bold">
                                <i class="fas fa-hashtag text-primary"></i> Número de Documento
                            </label>
                            <input asp-for="num_doc" type="text" class="form-control" placeholder="12345678" required />
                            <span asp-validation-for="num_doc" class="text-danger"></span>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="row">
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-primary btn-block">
                                <i class="fas fa-save"></i> Guardar Cambios
                            </button>
                        </div>
                        <div class="col-md-6">
                            <a href="@Url.Action("MiPerfil", "Cliente")" class="btn btn-secondary btn-block">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}