@{
    ViewData["Title"] = "Dashboard - Cliente";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-home text-primary"></i> Dashboard
    </h1>
    <span class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-user text-white-50"></i> Bienvenido, @Context.Session.GetString("Correo")
    </span>
</div>

<!-- Tarjetas de Estadísticas -->
<div class="row">
    <!-- Total Mascotas -->
    <div class="col-xl-6 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Mis Mascotas Registradas
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalMascotas</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-dog fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Total Citas -->
    <div class="col-xl-6 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Total de Citas
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalCitas</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Accesos Rápidos -->
<div class="row">
    <div class="col-12 mb-4">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-bolt"></i> Accesos Rápidos
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-3 col-md-6 mb-3">
                        <a href="@Url.Action("Agendar", "Cita")" class="btn btn-primary btn-block btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-calendar-plus"></i>
                            </span>
                            <span class="text">Agendar Cita</span>
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-3">
                        <a href="@Url.Action("Crear", "Mascota")" class="btn btn-success btn-block btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-plus-circle"></i>
                            </span>
                            <span class="text">Nueva Mascota</span>
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-3">
                        <a href="@Url.Action("Index", "Mascota")" class="btn btn-info btn-block btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-dog"></i>
                            </span>
                            <span class="text">Mis Mascotas</span>
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-3">
                        <a href="@Url.Action("MisCitas", "Cliente")" class="btn btn-warning btn-block btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-calendar-alt"></i>
                            </span>
                            <span class="text">Ver Mis Citas</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Información Adicional -->
<div class="row">
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-info-circle"></i> Información
                </h6>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <img src="~/img/veterinaria.png" alt="MiVet Online" style="max-width: 200px; margin-bottom: 20px;" onerror="this.style.display='none'">
                    <h4 class="text-primary">Bienvenido a MiVet Online</h4>
                    <p class="text-muted">
                        Gestiona las citas de tus mascotas de manera fácil y rápida.
                        Mantén el control de la salud de tus compañeros peludos.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }

    .border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }

    .btn-icon-split {
        padding: 0;
        overflow: hidden;
        display: flex;
        align-items: stretch;
        justify-content: center;
    }

        .btn-icon-split .icon {
            background: rgba(0, 0, 0, 0.15);
            display: inline-block;
            padding: 0.75rem 1rem;
        }

        .btn-icon-split .text {
            display: inline-block;
            padding: 0.75rem 1rem;
        }
</style>